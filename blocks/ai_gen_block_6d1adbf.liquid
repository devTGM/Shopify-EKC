      height: {{ block.settings.mobile_height }}px;
    }

    .ai-hero-slider__content-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding_mobile }}px;
      {% if block.settings.transparent_header %}
        padding-top: calc({{ block.settings.content_padding_mobile }}px + var(--header-height, 0px));
      {% endif %}
