      height: calc({{ block.settings.arrow_size }}px * 0.8);
    }

    .ai-hero-slider__arrow-{{ ai_gen_id }} svg {
      width: calc({{ block.settings.arrow_size }}px * 0.4);
      height: calc({{ block.settings.arrow_size }}px * 0.4);
    }

    .ai-hero-slider__arrow--prev-{{ ai_gen_id }} {
      left: calc({{ block.settings.arrow_position }}px * 0.5);
    }

    .ai-hero-slider__arrow--next-{{ ai_gen_id }} {
      right: calc({{ block.settings.arrow_position }}px * 0.5);
    }

    .ai-hero-slider__media-desktop-{{ ai_gen_id }} {
      display: none;
    }

    .ai-hero-slider__media-tablet-{{ ai_gen_id }} {
      display: none;
    }

    .ai-hero-slider__media-mobile-{{ ai_gen_id }} {
