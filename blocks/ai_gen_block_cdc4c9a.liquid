    transition: opacity 0.3s ease;
  }

  .ai-magazine-card-link-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-magazine-bottom-row-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.grid_gap }}px;
  }

  .ai-magazine-small-card-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-magazine-small-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: 200px;
    position: relative;
    overflow: hidden;
  }

