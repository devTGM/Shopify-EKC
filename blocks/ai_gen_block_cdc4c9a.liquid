    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-magazine-small-card-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 100px;
    max-height: 100px;
  }

  .ai-magazine-small-card-content-{{ ai_gen_id }} {
    padding: 20px;
    background-color: {{ block.settings.card_background }};
  }

  .ai-magazine-small-card-category-{{ ai_gen_id }} {
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin-bottom: 8px;
    color: {{ block.settings.accent_color }};
  }

  .ai-magazine-small-card-title-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 700;
    line-height: 1.3;
    margin: 0;
    color: {{ block.settings.text_color }};
  }

  .ai-magazine-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background-color: rgba(255, 255, 255, 0.9);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    border-radius: 4px;
  }

  @media screen and (max-width: 989px) {
    .ai-magazine-feature-{{ ai_gen_id }} {
      grid-column: span 12;
    }

    .ai-magazine-sidebar-{{ ai_gen_id }} {
      grid-column: span 12;
      flex-direction: row;
    }

    .ai-magazine-card-{{ ai_gen_id }} {
      flex: 1;
    }

    .ai-magazine-bottom-row-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }

    .ai-magazine-feature-image-{{ ai_gen_id }} {
      height: 400px;
    }

    .ai-magazine-feature-content-{{ ai_gen_id }} {
      padding: 30px;
    }

    .ai-magazine-feature-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.feature_title_size | times: 0.7 }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-magazine-layout-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 16px;
    }

    .ai-magazine-sidebar-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-magazine-bottom-row-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-magazine-feature-image-{{ ai_gen_id }} {
      height: 300px;
    }

    .ai-magazine-feature-content-{{ ai_gen_id }} {
      padding: 24px;
    }

    .ai-magazine-feature-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.feature_title_size | times: 0.5 }}px;
    }

    .ai-magazine-card-image-{{ ai_gen_id }} {
      height: 220px;
    }
  }
{% endstyle %}

