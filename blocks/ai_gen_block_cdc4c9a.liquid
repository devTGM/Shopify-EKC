{% doc %}
  @prompt
    A magazine-style editorial layout
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-magazine-layout-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 20px;
  }

  .ai-magazine-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
  }

  .ai-magazine-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    width: 100%;
  }

  .ai-magazine-feature-{{ ai_gen_id }} {
    grid-column: span 8;
    position: relative;
    overflow: hidden;
  }

  .ai-magazine-feature-image-{{ ai_gen_id }} {
    width: 100%;
    height: 600px;
    position: relative;
    overflow: hidden;
  }

  .ai-magazine-feature-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-magazine-feature-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-magazine-feature-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-magazine-feature-content-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 40px;
    background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 100%);
    color: #ffffff;
  }

  .ai-magazine-category-{{ ai_gen_id }} {
    font-size: {{ block.settings.category_size }}px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 12px;
    color: {{ block.settings.accent_color }};
  }

  .ai-magazine-feature-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.feature_title_size }}px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 16px;
    color: #ffffff;
  }

  .ai-magazine-feature-excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.excerpt_size }}px;
    line-height: 1.6;
    margin: 0 0 20px;
    color: #ffffff;
    opacity: 0.9;
  }

  .ai-magazine-feature-link-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: background-color 0.3s ease;
  }

  .ai-magazine-feature-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-magazine-sidebar-{{ ai_gen_id }} {
    grid-column: span 4;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-magazine-card-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-magazine-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: 280px;
    position: relative;
    overflow: hidden;
  }

  .ai-magazine-card-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-magazine-card-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-magazine-card-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 150px;
    max-height: 150px;
  }

  .ai-magazine-card-content-{{ ai_gen_id }} {
    padding: 24px;
    background-color: {{ block.settings.card_background }};
  }

  .ai-magazine-card-category-{{ ai_gen_id }} {
