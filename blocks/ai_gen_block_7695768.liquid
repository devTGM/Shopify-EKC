{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-testimonial-carousel-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 60px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-testimonial-carousel__container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
  }

  .ai-testimonial-carousel__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 50px;
  }

  .ai-testimonial-carousel__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 12px;
    font-family: var(--font-heading-family);
  }

  .ai-testimonial-carousel__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    margin: 0;
  }

  .ai-testimonial-carousel__wrapper-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-testimonial-carousel__track-container-{{ ai_gen_id }} {
    overflow: hidden;
    cursor: grab;
    user-select: none;
  }

  .ai-testimonial-carousel__track-container-{{ ai_gen_id }}.is-dragging {
    cursor: grabbing;
  }

  .ai-testimonial-carousel__track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    transition: transform 0.5s ease;
  }

  .ai-testimonial-carousel__track-{{ ai_gen_id }}.no-transition {
    transition: none;
  }

  .ai-testimonial-carousel__card-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - {{ block.settings.card_gap | times: 2 }}px) / 3);
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: 30px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .ai-testimonial-carousel__media-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.media_aspect_ratio }};
    border-radius: {{ block.settings.media_border_radius }}px;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .ai-testimonial-carousel__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-testimonial-carousel__video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-testimonial-carousel__video-controls-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    right: 10px;
    display: flex;
    gap: 8px;
    z-index: 2;
  }

  .ai-testimonial-carousel__video-btn-{{ ai_gen_id }} {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background-color: rgba(0, 0, 0, 0.6);
    border: none;
    color: white;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  .ai-testimonial-carousel__video-btn-{{ ai_gen_id }}:hover {
    background-color: rgba(0, 0, 0, 0.8);
  }

  .ai-testimonial-carousel__video-btn-{{ ai_gen_id }} svg {
    width: 18px;
    height: 18px;
  }

  .ai-testimonial-carousel__quote-{{ ai_gen_id }} {
    font-size: {{ block.settings.quote_size }}px;
    line-height: 1.6;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-testimonial-carousel__customer-{{ ai_gen_id }} {
    font-size: {{ block.settings.customer_name_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-testimonial-carousel__product-link-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_link_size }}px;
    color: {{ block.settings.link_color }};
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .ai-testimonial-carousel__product-link-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-testimonial-carousel__arrow-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background-color: {{ block.settings.arrow_background }};
    border: none;
    color: {{ block.settings.arrow_color }};
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3;
    transition: background-color 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

