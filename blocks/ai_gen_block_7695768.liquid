    background-color: {{ block.settings.arrow_hover_background }};
  }

  .ai-testimonial-carousel__arrow-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-testimonial-carousel__arrow--prev-{{ ai_gen_id }} {
    left: -24px;
  }

  .ai-testimonial-carousel__arrow--next-{{ ai_gen_id }} {
    right: -24px;
  }

  .ai-testimonial-carousel__arrow-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  .ai-testimonial-carousel__media-placeholder-{{ ai_gen_id }} {
