<testimonial-carousel-{{ ai_gen_id }}
  class="ai-testimonial-carousel-{{ ai_gen_id }}"
  data-auto-scroll="{{ block.settings.enable_auto_scroll }}"
  data-pause-on-hover="{{ block.settings.pause_on_hover }}"
  data-auto-scroll-speed="{{ block.settings.auto_scroll_speed }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-testimonial-carousel__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-testimonial-carousel__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-testimonial-carousel__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-testimonial-carousel__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-testimonial-carousel__wrapper-{{ ai_gen_id }}">
      <button
        class="ai-testimonial-carousel__arrow-{{ ai_gen_id }} ai-testimonial-carousel__arrow--prev-{{ ai_gen_id }}"
        aria-label="Previous testimonial"
        data-direction="prev"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>

      <div class="ai-testimonial-carousel__track-container-{{ ai_gen_id }}">
        <div class="ai-testimonial-carousel__track-{{ ai_gen_id }}">
          {% for i in (1..14) %}
            {% liquid
              assign enabled_key = 'testimonial_' | append: i | append: '_enabled'
              assign media_type_key = 'testimonial_' | append: i | append: '_media_type'
              assign image_key = 'testimonial_' | append: i | append: '_image'
              assign video_key = 'testimonial_' | append: i | append: '_video'
              assign quote_key = 'testimonial_' | append: i | append: '_quote'
              assign customer_key = 'testimonial_' | append: i | append: '_customer_name'
              assign product_key = 'testimonial_' | append: i | append: '_product'

              assign enabled = block.settings[enabled_key]
              assign media_type = block.settings[media_type_key]
              assign image = block.settings[image_key]
              assign video = block.settings[video_key]
              assign quote = block.settings[quote_key]
              assign customer = block.settings[customer_key]
              assign product = block.settings[product_key]
            %}

            {% if enabled %}
              <div class="ai-testimonial-carousel__card-{{ ai_gen_id }}">
                <div class="ai-testimonial-carousel__media-wrapper-{{ ai_gen_id }}">
                  {% if media_type == 'image' %}
                    {% if image %}
                      <img
                        src="{{ image | image_url: width: 800 }}"
                        alt="{{ customer | escape }}"
                        loading="lazy"
                        class="ai-testimonial-carousel__image-{{ ai_gen_id }}"
                      >
                    {% else %}
                      <div class="ai-testimonial-carousel__media-placeholder-{{ ai_gen_id }}">
                        {{ 'image' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  {% elsif media_type == 'video' %}
                    {% if video %}
                      <video
                        class="ai-testimonial-carousel__video-{{ ai_gen_id }}"
                        loop
                        playsinline
                        {% if block.settings.video_muted %}muted{% endif %}
                        data-video-index="{{ i }}"
                      >
                        <source src="{{ video }}" type="video/mp4">
                      </video>
                      {% if block.settings.show_video_controls %}
                        <div class="ai-testimonial-carousel__video-controls-{{ ai_gen_id }}">
                          <button
                            class="ai-testimonial-carousel__video-btn-{{ ai_gen_id }}"
                            data-video-control="mute"
                            data-video-index="{{ i }}"
                            aria-label="Toggle mute"
                          >
                            <svg class="mute-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                              <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"></polygon>
                              <line x1="23" y1="9" x2="17" y2="15"></line>
                              <line x1="17" y1="9" x2="23" y2="15"></line>
                            </svg>
                            <svg class="unmute-icon" style="display: none;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                              <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"></polygon>
                              <path d="M19.07 4.93a10 10 0 0 1 0 14.14"></path>
                              <path d="M15.54 8.46a5 5 0 0 1 0 7.07"></path>
                            </svg>
                          </button>
                          <button
                            class="ai-testimonial-carousel__video-btn-{{ ai_gen_id }}"
                            data-video-control="play"
                            data-video-index="{{ i }}"
                            aria-label="Play/Pause"
                          >
                            <svg class="play-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                              <polygon points="5 3 19 12 5 21 5 3"></polygon>
                            </svg>
                            <svg class="pause-icon" style="display: none;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                              <rect x="6" y="4" width="4" height="16"></rect>
                              <rect x="14" y="4" width="4" height="16"></rect>
                            </svg>
                          </button>
                        </div>
                      {% endif %}
                    {% else %}
                      <div class="ai-testimonial-carousel__media-placeholder-{{ ai_gen_id }}">
                        {{ 'image' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  {% endif %}
                </div>

                {% if quote != blank %}
                  <p class="ai-testimonial-carousel__quote-{{ ai_gen_id }}">{{ quote }}</p>
                {% endif %}

                {% if customer != blank %}
                  <p class="ai-testimonial-carousel__customer-{{ ai_gen_id }}">{{ customer }}</p>
                {% endif %}

                {% if product %}
                  <a
                    href="{{ product.url }}"
                    class="ai-testimonial-carousel__product-link-{{ ai_gen_id }}"
                  >
                    {{ product.title }}
                  </a>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <button
        class="ai-testimonial-carousel__arrow-{{ ai_gen_id }} ai-testimonial-carousel__arrow--next-{{ ai_gen_id }}"
        aria-label="Next testimonial"
        data-direction="next"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>
  </div>
</testimonial-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class TestimonialCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.isDragging = false;
        this.startPos = 0;
        this.currentTranslate = 0;
        this.prevTranslate = 0;
        this.animationID = null;
        this.autoScrollInterval = null;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-testimonial-carousel__track-{{ ai_gen_id }}');
        this.trackContainer = this.querySelector('.ai-testimonial-carousel__track-container-{{ ai_gen_id }}');
        this.cards = Array.from(this.querySelectorAll('.ai-testimonial-carousel__card-{{ ai_gen_id }}'));
        this.prevBtn = this.querySelector('.ai-testimonial-carousel__arrow--prev-{{ ai_gen_id }}');
        this.nextBtn = this.querySelector('.ai-testimonial-carousel__arrow--next-{{ ai_gen_id }}');

        if (this.cards.length === 0) return;

        this.cardsPerView = this.getCardsPerView();
        this.setupEventListeners();
        this.updateButtons();
        this.setupVideoControls();

        if (this.dataset.autoScroll === 'true') {
          this.startAutoScroll();
        }
      }

      getCardsPerView() {
        const width = window.innerWidth;
        if (width <= 749) return 1;
        if (width <= 989) return 2;
        return 3;
      }

      setupEventListeners() {
        this.prevBtn.addEventListener('click', () => this.navigate('prev'));
        this.nextBtn.addEventListener('click', () => this.navigate('next'));

        this.trackContainer.addEventListener('mousedown', this.dragStart.bind(this));
        this.trackContainer.addEventListener('touchstart', this.dragStart.bind(this));
        this.trackContainer.addEventListener('mouseup', this.dragEnd.bind(this));
        this.trackContainer.addEventListener('touchend', this.dragEnd.bind(this));
        this.trackContainer.addEventListener('mouseleave', this.dragEnd.bind(this));
        this.trackContainer.addEventListener('mousemove', this.drag.bind(this));
        this.trackContainer.addEventListener('touchmove', this.drag.bind(this));

        if (this.dataset.pauseOnHover === 'true') {
          this.addEventListener('mouseenter', () => this.stopAutoScroll());
          this.addEventListener('mouseleave', () => {
            if (this.dataset.autoScroll === 'true') {
              this.startAutoScroll();
            }
          });
        }

        window.addEventListener('resize', () => {
          this.cardsPerView = this.getCardsPerView();
          this.updatePosition();
        });
      }

      setupVideoControls() {
        const videoControls = this.querySelectorAll('[data-video-control]');
        videoControls.forEach(control => {
          control.addEventListener('click', (e) => {
            e.stopPropagation();
            const videoIndex = control.dataset.videoIndex;
            const video = this.querySelector(`[data-video-index="${videoIndex}"]`);
            const controlType = control.dataset.videoControl;

            if (controlType === 'mute') {
              video.muted = !video.muted;
              const muteIcon = control.querySelector('.mute-icon');
              const unmuteIcon = control.querySelector('.unmute-icon');
              if (video.muted) {
                muteIcon.style.display = 'block';
                unmuteIcon.style.display = 'none';
              } else {
                muteIcon.style.display = 'none';
                unmuteIcon.style.display = 'block';
              }
            } else if (controlType === 'play') {
              const playIcon = control.querySelector('.play-icon');
              const pauseIcon = control.querySelector('.pause-icon');
              if (video.paused) {
                video.play();
                playIcon.style.display = 'none';
                pauseIcon.style.display = 'block';
              } else {
                video.pause();
                playIcon.style.display = 'block';
                pauseIcon.style.display = 'none';
              }
            }
          });
        });

        const videos = this.querySelectorAll('.ai-testimonial-carousel__video-{{ ai_gen_id }}');
        videos.forEach(video => {
          video.addEventListener('click', () => {
            if (video.paused) {
              video.play();
            } else {
              video.pause();
            }
          });
        });
      }

      dragStart(e) {
        this.isDragging = true;
        this.startPos = this.getPositionX(e);
        this.trackContainer.classList.add('is-dragging');
        this.track.classList.add('no-transition');
        this.stopAutoScroll();
      }

      drag(e) {
        if (!this.isDragging) return;
        const currentPosition = this.getPositionX(e);
        this.currentTranslate = this.prevTranslate + currentPosition - this.startPos;
        this.setSliderPosition();
      }

      dragEnd() {
        if (!this.isDragging) return;
        this.isDragging = false;
        this.trackContainer.classList.remove('is-dragging');
        this.track.classList.remove('no-transition');

        const movedBy = this.currentTranslate - this.prevTranslate;
        const threshold = 50;

        if (movedBy < -threshold && this.currentIndex < this.cards.length - this.cardsPerView) {
          this.currentIndex++;
        } else if (movedBy > threshold && this.currentIndex > 0) {
          this.currentIndex--;
        }

        this.updatePosition();

        if (this.dataset.autoScroll === 'true') {
          this.startAutoScroll();
        }
      }

      getPositionX(e) {
        return e.type.includes('mouse') ? e.pageX : e.touches[0].clientX;
      }

      setSliderPosition() {
        this.track.style.transform = `translateX(${this.currentTranslate}px)`;
      }

      navigate(direction) {
        if (direction === 'next' && this.currentIndex < this.cards.length - this.cardsPerView) {
          this.currentIndex++;
        } else if (direction === 'prev' && this.currentIndex > 0) {
          this.currentIndex--;
        }
        this.updatePosition();
        this.stopAutoScroll();
        if (this.dataset.autoScroll === 'true') {
          this.startAutoScroll();
        }
      }

      updatePosition() {
        const cardWidth = this.cards[0].offsetWidth;
        const gap = parseInt(getComputedStyle(this.track).gap);
        const offset = -(this.currentIndex * (cardWidth + gap));
        this.currentTranslate = offset;
        this.prevTranslate = offset;
        this.track.style.transform = `translateX(${offset}px)`;
        this.updateButtons();
      }

      updateButtons() {
        this.prevBtn.disabled = this.currentIndex === 0;
        this.nextBtn.disabled = this.currentIndex >= this.cards.length - this.cardsPerView;
      }

      startAutoScroll() {
        this.stopAutoScroll();
        const speed = parseInt(this.dataset.autoScrollSpeed) || 5000;
        this.autoScrollInterval = setInterval(() => {
          if (this.currentIndex >= this.cards.length - this.cardsPerView) {
            this.currentIndex = 0;
          } else {
            this.currentIndex++;
          }
          this.updatePosition();
        }, speed);
      }

      stopAutoScroll() {
        if (this.autoScrollInterval) {
          clearInterval(this.autoScrollInterval);
          this.autoScrollInterval = null;
        }
      }

      disconnectedCallback() {
        this.stopAutoScroll();
      }
    }

    customElements.define('testimonial-carousel-{{ ai_gen_id }}', TestimonialCarousel{{ ai_gen_id }});
  })();
</script>

