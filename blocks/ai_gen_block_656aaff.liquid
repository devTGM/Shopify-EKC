{% doc %}
  @prompt
    A pop up link text which connects a metafield page object sand shows a beautified page. It should come with a option of either a pop up or drawer,  Need a icon option as well
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-page-link-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-page-link-trigger-{{ ai_gen_id }} {
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    color: {{ block.settings.link_color }};
    font-size: {{ block.settings.link_font_size }}px;
    text-decoration: {{ block.settings.link_underline }};
    transition: color 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .ai-page-link-trigger-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-page-link-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
  }

  .ai-page-link-overlay-{{ ai_gen_id }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    z-index: 999;
  }

  .ai-page-link-overlay-{{ ai_gen_id }}.active {
    opacity: 1;
    visibility: visible;
  }

  .ai-page-link-popup-{{ ai_gen_id }} {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0.9);
    width: 90%;
    max-width: {{ block.settings.popup_max_width }}px;
    max-height: 90vh;
    background-color: {{ block.settings.popup_bg_color }};
    border-radius: {{ block.settings.popup_border_radius }}px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease, transform 0.3s ease;
    z-index: 1000;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .ai-page-link-popup-{{ ai_gen_id }}.active {
    opacity: 1;
    visibility: visible;
    transform: translate(-50%, -50%) scale(1);
  }

  .ai-page-link-drawer-{{ ai_gen_id }} {
    position: fixed;
    top: 0;
    right: 0;
    width: 90%;
    max-width: {{ block.settings.drawer_width }}px;
    height: 100%;
    background-color: {{ block.settings.popup_bg_color }};
    box-shadow: -5px 0 20px rgba(0, 0, 0, 0.3);
    transform: translateX(100%);
    transition: transform 0.3s ease;
    z-index: 1000;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .ai-page-link-drawer-{{ ai_gen_id }}.active {
    transform: translateX(0);
  }

  .ai-page-link-header-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: {{ block.settings.content_padding }}px;
    border-bottom: 1px solid {{ block.settings.border_color }};
    flex-shrink: 0;
  }

  .ai-page-link-title-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.title_font_size }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-page-link-close-{{ ai_gen_id }} {
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    color: {{ block.settings.text_color }};
    transition: opacity 0.3s ease;
  }

  .ai-page-link-close-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-page-link-content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;
    overflow-y: auto;
    flex-grow: 1;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
  }

  .ai-page-link-content-{{ ai_gen_id }} h1,
  .ai-page-link-content-{{ ai_gen_id }} h2,
  .ai-page-link-content-{{ ai_gen_id }} h3,
  .ai-page-link-content-{{ ai_gen_id }} h4,
  .ai-page-link-content-{{ ai_gen_id }} h5,
  .ai-page-link-content-{{ ai_gen_id }} h6 {
    color: {{ block.settings.heading_color }};
    margin-top: 1.5em;
    margin-bottom: 0.5em;
  }

  .ai-page-link-content-{{ ai_gen_id }} h1 {
    font-size: 2em;
  }

  .ai-page-link-content-{{ ai_gen_id }} h2 {
    font-size: 1.5em;
  }

  .ai-page-link-content-{{ ai_gen_id }} h3 {
    font-size: 1.25em;
  }

  .ai-page-link-content-{{ ai_gen_id }} p {
    margin-bottom: 1em;
  }

  .ai-page-link-content-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: underline;
  }

  .ai-page-link-content-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-page-link-content-{{ ai_gen_id }} img {
    max-width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    margin: 1em 0;
  }

  .ai-page-link-content-{{ ai_gen_id }} ul,
  .ai-page-link-content-{{ ai_gen_id }} ol {
    margin-bottom: 1em;
    padding-left: 1.5em;
  }

  .ai-page-link-content-{{ ai_gen_id }} li {
    margin-bottom: 0.5em;
  }

  .ai-page-link-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #999;
    font-style: italic;
  }

  @media screen and (max-width: 749px) {
    .ai-page-link-popup-{{ ai_gen_id }} {
      width: 95%;
      max-height: 85vh;
    }

    .ai-page-link-drawer-{{ ai_gen_id }} {
      width: 100%;
      max-width: 100%;
    }

    .ai-page-link-header-{{ ai_gen_id }},
    .ai-page-link-content-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding | times: 0.75 }}px;
    }
  }
{% endstyle %}

