</page-link-modal-{{ ai_gen_id }}>

<script>
  (function() {
    class PageLinkModal{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.trigger = this.querySelector('.ai-page-link-trigger-{{ ai_gen_id }}');
        this.overlay = this.querySelector('.ai-page-link-overlay-{{ ai_gen_id }}');
        this.modal = this.querySelector('.ai-page-link-popup-{{ ai_gen_id }}, .ai-page-link-drawer-{{ ai_gen_id }}');
        this.closeButton = this.querySelector('.ai-page-link-close-{{ ai_gen_id }}');

        this.setupEventListeners();
      }

      setupEventListeners() {
        this.trigger.addEventListener('click', () => this.open());
        this.closeButton.addEventListener('click', () => this.close());
        this.overlay.addEventListener('click', () => this.close());

        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && this.modal.classList.contains('active')) {
            this.close();
          }
        });
      }

      open() {
        this.overlay.classList.add('active');
        this.modal.classList.add('active');
        document.body.style.overflow = 'hidden';
        this.closeButton.focus();
      }

      close() {
        this.overlay.classList.remove('active');
        this.modal.classList.remove('active');
        document.body.style.overflow = '';
        this.trigger.focus();
      }
    }

    customElements.define('page-link-modal-{{ ai_gen_id }}', PageLinkModal{{ ai_gen_id }});
  })();
</script>

