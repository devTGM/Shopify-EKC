    display: block;
    width: 100%;
    padding: 60px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-category-tabs-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    width: {{ block.settings.desktop_width_percent }}%;
  }

  .ai-category-tabs-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-category-tabs-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 12px;
    font-weight: 600;
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-style: {{ block.settings.heading_font.style }};
  }

  .ai-category-tabs-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    font-family: {{ block.settings.subtitle_font.family }}, {{ block.settings.subtitle_font.fallback_families }};
    font-weight: {{ block.settings.subtitle_font.weight }};
    font-style: {{ block.settings.subtitle_font.style }};
  }

  .ai-category-tabs-nav-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-bottom: 40px;
    flex-wrap: wrap;
    border-bottom: {{ block.settings.tab_border_width }}px solid {{ block.settings.tab_border_color }};
    padding-bottom: 0;
  }

  .ai-category-tab-button-{{ ai_gen_id }} {
    background: none;
    border: none;
    padding: 16px 32px;
    font-size: {{ block.settings.tab_font_size }}px;
    color: {{ block.settings.tab_text_color }};
    cursor: pointer;
    position: relative;
    transition: all 0.3s ease;
    border-bottom: {{ block.settings.tab_border_width }}px solid transparent;
    margin-bottom: -{{ block.settings.tab_border_width }}px;
    font-weight: 500;
    font-family: {{ block.settings.tab_font.family }}, {{ block.settings.tab_font.fallback_families }};
    font-weight: {{ block.settings.tab_font.weight }};
    font-style: {{ block.settings.tab_font.style }};
  }

  .ai-category-tab-button-{{ ai_gen_id }}:hover {
    color: {{ block.settings.tab_hover_color }};
  }

  .ai-category-tab-button-{{ ai_gen_id }}.active {
    color: {{ block.settings.tab_active_color }};
    border-bottom-color: {{ block.settings.tab_active_border_color }};
    font-weight: 600;
  }

  .ai-category-tabs-content-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-category-tab-panel-{{ ai_gen_id }} {
    display: none;
  }

  .ai-category-tab-panel-{{ ai_gen_id }}.active {
    display: block;
  }

  .ai-category-subcategories-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.card_gap }}px;
  }

  .ai-category-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    text-decoration: none;
    display: block;
  }

  .ai-category-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .ai-category-card-image-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .ai-category-card-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-category-card-{{ ai_gen_id }}:hover .ai-category-card-image-{{ ai_gen_id }} img {
    transform: scale(1.05);
  }

  .ai-category-card-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
  }

  .ai-category-card-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

