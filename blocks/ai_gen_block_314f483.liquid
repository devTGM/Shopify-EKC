    color: {{ block.settings.card_description_color }};
    margin: 0 0 12px;
    line-height: 1.5;
    font-family: {{ block.settings.card_description_font.family }}, {{ block.settings.card_description_font.fallback_families }};
    font-weight: {{ block.settings.card_description_font.weight }};
    font-style: {{ block.settings.card_description_font.style }};
  }

