<category-tabs-{{ ai_gen_id }} class="ai-category-tabs-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-category-tabs-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subtitle != blank %}
      <div class="ai-category-tabs-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-category-tabs-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-category-tabs-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-category-tabs-nav-{{ ai_gen_id }}" role="tablist">
      {% for i in (1..5) %}
        {% liquid
          assign main_collection_key = 'main_category_' | append: i
          assign main_collection = block.settings[main_collection_key]
        %}
        {% if main_collection != blank %}
          <button
            class="ai-category-tab-button-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            role="tab"
            aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
            aria-controls="ai-category-panel-{{ ai_gen_id }}-{{ i }}"
            data-tab="{{ i }}"
          >
            {{ main_collection.title }}
          </button>
        {% endif %}
      {% endfor %}
    </div>

    <div class="ai-category-tabs-content-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign main_collection_key = 'main_category_' | append: i
          assign main_collection = block.settings[main_collection_key]
          assign sub_collections_key = 'sub_categories_' | append: i
          assign sub_collections = block.settings[sub_collections_key]
        %}
        {% if main_collection != blank %}
          <div
            class="ai-category-tab-panel-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            role="tabpanel"
            id="ai-category-panel-{{ ai_gen_id }}-{{ i }}"
            aria-labelledby="ai-category-tab-{{ ai_gen_id }}-{{ i }}"
          >
            {% if sub_collections != blank and sub_collections.size > 0 %}
              <div class="ai-category-subcategories-{{ ai_gen_id }}">
                {% for collection in sub_collections %}
                  <a href="{{ collection.url }}" class="ai-category-card-{{ ai_gen_id }}">
                    <div class="ai-category-card-image-{{ ai_gen_id }}">
                      {% if collection.featured_image %}
                        <img
                          src="{{ collection.featured_image | image_url: width: 600 }}"
                          alt="{{ collection.featured_image.alt | escape }}"
                          loading="lazy"
                          width="600"
                          height="600"
                        >
                      {% else %}
                        <div class="ai-category-card-image-placeholder-{{ ai_gen_id }}">
                          {{ 'collection-1' | placeholder_svg_tag }}
                        </div>
                      {% endif %}
                    </div>
                    <div class="ai-category-card-content-{{ ai_gen_id }}">
                      <h3 class="ai-category-card-title-{{ ai_gen_id }}">{{ collection.title }}</h3>
                      {% if block.settings.show_description and collection.description != blank %}
                        <p class="ai-category-card-description-{{ ai_gen_id }}">
                          {{ collection.description | strip_html | truncate: 100 }}
                        </p>
                      {% endif %}
                      {% if block.settings.show_product_count %}
                        <div class="ai-category-card-count-{{ ai_gen_id }}">
                          {{ collection.products_count }}
                          {% if collection.products_count == 1 %}
                            product
                          {% else %}
                            products
                          {% endif %}
                        </div>
                      {% endif %}
                    </div>
                  </a>
                {% endfor %}
              </div>
            {% else %}
              <div class="ai-category-empty-state-{{ ai_gen_id }}">
                {{ 'collection-1' | placeholder_svg_tag }}
                <p>Add subcategories for {{ main_collection.title }}</p>
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</category-tabs-{{ ai_gen_id }}>

<script>
  (function() {
    class CategoryTabs{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-category-tab-button-{{ ai_gen_id }}');
        this.panels = this.querySelectorAll('.ai-category-tab-panel-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', () => {
            const tabId = tab.getAttribute('data-tab');
            this.switchTab(tabId);
          });
        });
      }

      switchTab(tabId) {
        this.tabs.forEach((tab) => {
          const isActive = tab.getAttribute('data-tab') === tabId;
          tab.classList.toggle('active', isActive);
          tab.setAttribute('aria-selected', isActive);
        });

        this.panels.forEach((panel, index) => {
          const panelId = (index + 1).toString();
          panel.classList.toggle('active', panelId === tabId);
        });
      }
    }

    customElements.define('category-tabs-{{ ai_gen_id }}', CategoryTabs{{ ai_gen_id }});
  })();
</script>

