          assign featured_image = block.settings[featured_image_key]
        %}

        {% if collection != blank %}
          <div class="ai-split-hero-featured-slide-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" data-featured-slide="{{ forloop.index }}">
            {% if featured_image %}
              <img
                src="{{ featured_image | image_url: width: 2000 }}"
                alt="{{ featured_image.alt | escape }}"
                loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                width="{{ featured_image.width }}"
                height="{{ featured_image.height }}"
                class="ai-split-hero-featured-image-{{ ai_gen_id }}"
              >
            {% elsif collection.image %}
              <img
                src="{{ collection.image | image_url: width: 2000 }}"
                alt="{{ collection.image.alt | escape }}"
                loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                width="{{ collection.image.width }}"
                height="{{ collection.image.height }}"
                class="ai-split-hero-featured-image-{{ ai_gen_id }}"
              >
            {% else %}
              <div class="ai-split-hero-featured-placeholder-{{ ai_gen_id }}">
                {{ 'hero-apparel-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <div class="ai-split-hero-collections-{{ ai_gen_id }}">
      <div class="ai-split-hero-carousel-{{ ai_gen_id }}">
        <div class="ai-split-hero-slides-{{ ai_gen_id }}">
          {% for i in (1..5) %}
            {% liquid
              assign collection_key = 'collection_' | append: i
              assign label_key = 'label_' | append: i
              assign badge_key = 'badge_' | append: i
              assign cta_key = 'cta_text_' | append: i
              assign collection = block.settings[collection_key]
              assign label = block.settings[label_key]
              assign badge = block.settings[badge_key]
              assign cta_text = block.settings[cta_key]
            %}

            {% if collection != blank %}
              <div class="ai-split-hero-slide-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" data-slide="{{ forloop.index }}">
                <div class="ai-split-hero-card-{{ ai_gen_id }}">
                  {% if label != blank %}
                    <span class="ai-split-hero-label-{{ ai_gen_id }}">{{ label }}</span>
                  {% endif %}

                  <div class="ai-split-hero-image-wrapper-{{ ai_gen_id }}">
                    {% if collection.featured_image %}
                      <img
                        src="{{ collection.featured_image | image_url: width: 800 }}"
                        alt="{{ collection.featured_image.alt | escape }}"
                        loading="lazy"
                        width="800"
                        height="800"
                        class="ai-split-hero-collection-image-{{ ai_gen_id }}"
                      >
                    {% else %}
                      <div class="ai-split-hero-image-placeholder-{{ ai_gen_id }}">
                        {{ 'collection-apparel-1' | placeholder_svg_tag }}
                      </div>
                    {% endif %}

                    {% if badge != blank %}
                      <span class="ai-split-hero-badge-{{ ai_gen_id }}">{{ badge }}</span>
                    {% endif %}
                  </div>

                  <h2 class="ai-split-hero-collection-name-{{ ai_gen_id }}">{{ collection.title }}</h2>

                  <a href="{{ collection.url }}" class="ai-split-hero-cta-{{ ai_gen_id }}">
                    {% if cta_text != blank %}
                      {{ cta_text }}
                    {% else %}
                      Shop Now
                    {% endif %}
                  </a>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>

        <div class="ai-split-hero-navigation-{{ ai_gen_id }}">
          {% if block.settings.navigation_style == 'arrows' %}
            <button class="ai-split-hero-nav-arrow-{{ ai_gen_id }} ai-split-hero-prev-{{ ai_gen_id }}" aria-label="Previous">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="15 18 9 12 15 6"></polyline>
              </svg>
            </button>
          {% endif %}

          {% for i in (1..5) %}
            {% liquid
              assign collection_key = 'collection_' | append: i
              assign collection = block.settings[collection_key]
            %}
            {% if collection != blank %}
              <button
                class="ai-split-hero-nav-dot-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
                data-slide="{{ forloop.index }}"
                aria-label="Go to slide {{ forloop.index }}"
              ></button>
            {% endif %}
          {% endfor %}

          {% if block.settings.navigation_style == 'arrows' %}
            <button class="ai-split-hero-nav-arrow-{{ ai_gen_id }} ai-split-hero-next-{{ ai_gen_id }}" aria-label="Next">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="9 18 15 12 9 6"></polyline>
              </svg>
            </button>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
