{% doc %}
  @prompt
    A Hero section having different Images/videos for multiple slides and optimised for Mobile and Desktop View, It should have transparent header, Need control of arrows and dots, I need content padding option as well
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-slider-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: block;
    margin-top: calc(-1 * var(--header-height, 0px));
  }

  .ai-hero-slider__viewport-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.desktop_height }}px;
  }

  .ai-hero-slider__track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
    height: 100%;
  }

  .ai-hero-slider__slide-{{ ai_gen_id }} {
    min-width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    align-items: {{ block.settings.content_alignment_vertical }};
    justify-content: {{ block.settings.content_alignment_horizontal }};
  }

  .ai-hero-slider__media-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-slider__video-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-slider__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .ai-hero-slider__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    text-align: {{ block.settings.text_alignment }};
    padding: {{ block.settings.content_padding_top }}px {{ block.settings.content_padding_horizontal }}px {{ block.settings.content_padding_bottom }}px {{ block.settings.content_padding_horizontal }}px;
    max-width: {{ block.settings.content_max_width }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-hero-slider__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
    color: {{ block.settings.text_color }};
  }

  .ai-hero-slider__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 24px;
    color: {{ block.settings.text_color }};
  }

  .ai-hero-slider__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
  }

  .ai-hero-slider__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
  }

  .ai-hero-slider__controls-{{ ai_gen_id }} {
    position: absolute;
    {% if block.settings.dots_position == 'bottom' %}
      bottom: {{ block.settings.dots_offset }}px;
    {% else %}
      top: {{ block.settings.dots_offset }}px;
    {% endif %}
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
    display: flex;
    gap: {{ block.settings.dots_spacing }}px;
  }

  .ai-hero-slider__dot-{{ ai_gen_id }} {
    width: {{ block.settings.dot_size }}px;
    height: {{ block.settings.dot_size }}px;
    border-radius: {% if block.settings.dot_shape == 'circle' %}50%{% else %}{{ block.settings.dot_border_radius }}px{% endif %};
    background-color: {{ block.settings.dot_color }};
    opacity: {{ block.settings.dot_opacity | divided_by: 100.0 }};
    border: {{ block.settings.dot_border_width }}px solid {{ block.settings.dot_border_color }};
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .ai-hero-slider__dot-{{ ai_gen_id }}.active {
    opacity: 1;
    background-color: {{ block.settings.dot_active_color }};
    transform: scale({{ block.settings.dot_active_scale | divided_by: 100.0 }});
  }

  .ai-hero-slider__dot-{{ ai_gen_id }}:hover {
    opacity: {{ block.settings.dot_hover_opacity | divided_by: 100.0 }};
  }

  .ai-hero-slider__arrow-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 3;
    background-color: {{ block.settings.arrow_background }};
    color: {{ block.settings.arrow_color }};
    border: {{ block.settings.arrow_border_width }}px solid {{ block.settings.arrow_border_color }};
    width: {{ block.settings.arrow_size }}px;
    height: {{ block.settings.arrow_size }}px;
    border-radius: {% if block.settings.arrow_shape == 'circle' %}50%{% else %}{{ block.settings.arrow_border_radius }}px{% endif %};
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    opacity: {{ block.settings.arrow_opacity | divided_by: 100.0 }};
  }

  .ai-hero-slider__arrow-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.arrow_hover_background }};
    color: {{ block.settings.arrow_hover_color }};
    opacity: 1;
  }

  .ai-hero-slider__arrow--prev-{{ ai_gen_id }} {
    left: {{ block.settings.arrow_offset }}px;
  }

  .ai-hero-slider__arrow--next-{{ ai_gen_id }} {
    right: {{ block.settings.arrow_offset }}px;
  }

  .ai-hero-slider__arrow-{{ ai_gen_id }} svg {
    width: {{ block.settings.arrow_icon_size }}px;
    height: {{ block.settings.arrow_icon_size }}px;
    stroke-width: {{ block.settings.arrow_icon_stroke }}px;
  }

  .ai-hero-slider__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-hero-slider__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-slider__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
