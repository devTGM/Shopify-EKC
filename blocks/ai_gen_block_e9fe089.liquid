<split-hero-{{ ai_gen_id }} class="ai-split-hero-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-split-hero-container-{{ ai_gen_id }}">
    <div class="ai-split-hero-image-side-{{ ai_gen_id }}">
      {% if block.settings.featured_image %}
        <img
          src="{{ block.settings.featured_image | image_url: width: 2000 }}"
          alt="{{ block.settings.featured_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.featured_image.width }}"
          height="{{ block.settings.featured_image.height }}"
          class="ai-split-hero-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-split-hero-image-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>

    <div class="ai-split-hero-content-side-{{ ai_gen_id }}">
      <div class="ai-split-hero-carousel-{{ ai_gen_id }}">
        <div class="ai-split-hero-slides-{{ ai_gen_id }}">
          {% for i in (1..5) %}
            {% liquid
              assign collection_key = 'collection_' | append: i
              assign label_key = 'label_' | append: i
              assign badge_key = 'badge_' | append: i
              assign cta_text_key = 'cta_text_' | append: i
              assign collection = block.settings[collection_key]
              assign label = block.settings[label_key]
              assign badge = block.settings[badge_key]
              assign cta_text = block.settings[cta_text_key]
            %}

            {% if collection != blank %}
              <div class="ai-split-hero-slide-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" data-slide="{{ forloop.index }}">
                <div class="ai-split-hero-card-{{ ai_gen_id }}">
                  {% if label != blank %}
                    <div class="ai-split-hero-label-{{ ai_gen_id }}">{{ label }}</div>
                  {% endif %}

                  <div class="ai-split-hero-card-image-wrapper-{{ ai_gen_id }}">
                    {% if collection.image %}
                      <img
                        src="{{ collection.image | image_url: width: 800 }}"
                        alt="{{ collection.image.alt | default: collection.title | escape }}"
                        loading="lazy"
                        width="800"
                        height="800"
                        class="ai-split-hero-card-image-{{ ai_gen_id }}"
                      >
                    {% elsif collection.products.first.featured_image %}
                      <img
                        src="{{ collection.products.first.featured_image | image_url: width: 800 }}"
                        alt="{{ collection.products.first.featured_image.alt | default: collection.title | escape }}"
                        loading="lazy"
                        width="800"
                        height="800"
                        class="ai-split-hero-card-image-{{ ai_gen_id }}"
                      >
                    {% else %}
                      <div class="ai-split-hero-card-image-placeholder-{{ ai_gen_id }}">
                        {{ 'collection-apparel-1' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  </div>

                  <h3 class="ai-split-hero-collection-name-{{ ai_gen_id }}">{{ collection.title }}</h3>

                  {% if badge != blank %}
                    <div class="ai-split-hero-badge-{{ ai_gen_id }}">{{ badge }}</div>
                  {% endif %}

                  <a href="{{ collection.url }}" class="ai-split-hero-cta-{{ ai_gen_id }}">
                    {% if cta_text != blank %}
                      {{ cta_text }}
                    {% else %}
                      Shop Now
                    {% endif %}
                  </a>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>

        {% assign active_collections_count = 0 %}
        {% for i in (1..5) %}
          {% liquid
            assign collection_key = 'collection_' | append: i
            assign collection = block.settings[collection_key]
          %}
          {% if collection != blank %}
            {% assign active_collections_count = active_collections_count | plus: 1 %}
          {% endif %}
        {% endfor %}

        {% if active_collections_count > 1 %}
          <div class="ai-split-hero-navigation-{{ ai_gen_id }}">
            {% if block.settings.navigation_style == 'arrows' or block.settings.navigation_style == 'both' %}
              <button class="ai-split-hero-arrow-{{ ai_gen_id }} ai-split-hero-prev-{{ ai_gen_id }}" aria-label="Previous slide">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
              </button>
            {% endif %}

            {% if block.settings.navigation_style == 'dots' or block.settings.navigation_style == 'both' %}
              <div class="ai-split-hero-dots-{{ ai_gen_id }}">
                {% for i in (1..5) %}
                  {% liquid
                    assign collection_key = 'collection_' | append: i
                    assign collection = block.settings[collection_key]
                  %}
                  {% if collection != blank %}
                    <button 
                      class="ai-split-hero-dot-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" 
                      data-slide="{{ forloop.index }}"
                      aria-label="Go to slide {{ forloop.index }}"
                    ></button>
                  {% endif %}
                {% endfor %}
              </div>
            {% endif %}

            {% if block.settings.navigation_style == 'arrows' or block.settings.navigation_style == 'both' %}
              <button class="ai-split-hero-arrow-{{ ai_gen_id }} ai-split-hero-next-{{ ai_gen_id }}" aria-label="Next slide">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
              </button>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</split-hero-{{ ai_gen_id }}>

<script>
  (function() {
    class SplitHero{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 1;
        this.slides = [];
        this.dots = [];
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.slides = Array.from(this.querySelectorAll('.ai-split-hero-slide-{{ ai_gen_id }}'));
        this.dots = Array.from(this.querySelectorAll('.ai-split-hero-dot-{{ ai_gen_id }}'));
        this.prevButton = this.querySelector('.ai-split-hero-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-split-hero-next-{{ ai_gen_id }}');

        if (this.slides.length <= 1) return;

        this.setupEventListeners();
        
        {% if block.settings.autoplay %}
          this.startAutoplay();
        {% endif %}
      }

      setupEventListeners() {
        this.dots.forEach((dot) => {
          dot.addEventListener('click', (e) => {
            const slideNumber = parseInt(e.target.dataset.slide);
            this.goToSlide(slideNumber);
            this.resetAutoplay();
          });
        });

        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => {
            this.previousSlide();
            this.resetAutoplay();
          });
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => {
            this.nextSlide();
            this.resetAutoplay();
          });
        }

        let touchStartX = 0;
        let touchEndX = 0;

        this.addEventListener('touchstart', (e) => {
          touchStartX = e.changedTouches[0].screenX;
        });

        this.addEventListener('touchend', (e) => {
          touchEndX = e.changedTouches[0].screenX;
          this.handleSwipe(touchStartX, touchEndX);
        });
      }

      handleSwipe(startX, endX) {
        const swipeThreshold = 50;
        const diff = startX - endX;

        if (Math.abs(diff) > swipeThreshold) {
          if (diff > 0) {
            this.nextSlide();
          } else {
            this.previousSlide();
          }
          this.resetAutoplay();
        }
      }

      goToSlide(slideNumber) {
        this.slides.forEach((slide) => {
          slide.classList.remove('active');
        });

        this.dots.forEach((dot) => {
          dot.classList.remove('active');
        });

        const targetSlide = this.slides.find((slide) => {
          return parseInt(slide.dataset.slide) === slideNumber;
        });

        const targetDot = this.dots.find((dot) => {
          return parseInt(dot.dataset.slide) === slideNumber;
        });

        if (targetSlide) {
          targetSlide.classList.add('active');
          this.currentSlide = slideNumber;
        }

        if (targetDot) {
          targetDot.classList.add('active');
        }
      }

      nextSlide() {
        const activeSlides = this.slides.filter(slide => {
          const slideNum = parseInt(slide.dataset.slide);
          return !isNaN(slideNum);
        });

        const currentIndex = activeSlides.findIndex(slide => {
          return parseInt(slide.dataset.slide) === this.currentSlide;
        });

        const nextIndex = (currentIndex + 1) % activeSlides.length;
        const nextSlideNumber = parseInt(activeSlides[nextIndex].dataset.slide);
        
        this.goToSlide(nextSlideNumber);
      }

      previousSlide() {
        const activeSlides = this.slides.filter(slide => {
          const slideNum = parseInt(slide.dataset.slide);
          return !isNaN(slideNum);
        });

        const currentIndex = activeSlides.findIndex(slide => {
          return parseInt(slide.dataset.slide) === this.currentSlide;
        });

        const prevIndex = currentIndex === 0 ? activeSlides.length - 1 : currentIndex - 1;
        const prevSlideNumber = parseInt(activeSlides[prevIndex].dataset.slide);
        
        this.goToSlide(prevSlideNumber);
      }

      startAutoplay() {
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, {{ block.settings.autoplay_duration }} * 1000);
      }

      resetAutoplay() {
        {% if block.settings.autoplay %}
          if (this.autoplayInterval) {
            clearInterval(this.autoplayInterval);
            this.startAutoplay();
          }
        {% endif %}
      }

      disconnectedCallback() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
        }
      }
    }

    customElements.define('split-hero-{{ ai_gen_id }}', SplitHero{{ ai_gen_id }});
  })();
</script>

