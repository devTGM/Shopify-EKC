        </div>
      {% endif %}
    </div>

    <div class="ai-collection-highlight__carousel-wrapper-{{ ai_gen_id }}">
      <button
        class="ai-collection-highlight__nav-button-{{ ai_gen_id }} ai-collection-highlight__nav-button-{{ ai_gen_id }}--prev"
        aria-label="Previous slide"
        data-nav-prev
      >
        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>

      <div class="ai-collection-highlight__cards-{{ ai_gen_id }}" data-scroll-container>
        {% for i in (1..3) %}
          {% liquid
            assign collection_key = 'collection_' | append: i
            assign tag_key = 'card_' | append: i | append: '_tag'
            assign title_key = 'card_' | append: i | append: '_title'
            assign subtitle_key = 'card_' | append: i | append: '_subtitle'
            assign image_key = 'card_' | append: i | append: '_image'

            assign collection = block.settings[collection_key]
            assign tag = block.settings[tag_key]
            assign title = block.settings[title_key]
            assign subtitle = block.settings[subtitle_key]
            assign image = block.settings[image_key]

            if collection != blank
              assign card_url = collection.url
            else
              assign card_url = '#'
            endif
          %}

          <a
            href="{{ card_url }}"
            class="ai-collection-highlight__card-{{ ai_gen_id }}"
            data-card-index="{{ forloop.index0 }}"
            {% if collection == blank %}aria-disabled="true"{% endif %}
          >
            {% if tag != blank %}
              <div class="ai-collection-highlight__card-tag-{{ ai_gen_id }}">
                {{ tag }}
              </div>
            {% endif %}

            <div class="ai-collection-highlight__card-image-wrapper-{{ ai_gen_id }}">
              {% if image != blank %}
                <img
                  src="{{ image | image_url: width: 800 }}"
                  alt="{{ image.alt | escape }}"
                  class="ai-collection-highlight__card-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="{{ image.width }}"
                  height="{{ image.height }}"
                >
              {% else %}
                <div class="ai-collection-highlight__card-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            {% if title != blank %}
              <div class="ai-collection-highlight__card-title-{{ ai_gen_id }}">
                {{ title }}
                <span class="ai-collection-highlight__card-title-underline-{{ ai_gen_id }}"></span>
              </div>
            {% endif %}

            {% if subtitle != blank %}
              <div class="ai-collection-highlight__card-subtitle-{{ ai_gen_id }}">
