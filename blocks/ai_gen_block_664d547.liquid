<script>
  (function() {
    class LuxuryCollection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.scrollContainer = null;
        this.cards = [];
        this.dots = [];
        this.prevButton = null;
        this.nextButton = null;
        this.currentIndex = 0;
        this.isScrolling = false;
      }

      connectedCallback() {
        this.scrollContainer = this.querySelector('[data-scroll-container]');
        this.cards = Array.from(this.querySelectorAll('.ai-collection-highlight__card-{{ ai_gen_id }}'));
        this.dots = Array.from(this.querySelectorAll('[data-dot-index]'));
        this.prevButton = this.querySelector('[data-nav-prev]');
        this.nextButton = this.querySelector('[data-nav-next]');
        
        this.setupAccessibility();
        this.setupMobileScroll();
        this.setupNavigation();
      }

      setupAccessibility() {
        this.cards.forEach(card => {
          if (card.getAttribute('aria-disabled') === 'true') {
            card.addEventListener('click', (e) => {
              e.preventDefault();
            });
          }
        });
      }

      setupMobileScroll() {
        if (!this.scrollContainer || window.innerWidth > 749) return;

        this.scrollContainer.addEventListener('scroll', () => {
          if (this.isScrolling) return;
          
          this.isScrolling = true;
          requestAnimationFrame(() => {
            this.updateActiveCard();
            this.updateNavButtons();
            this.isScrolling = false;
          });
        });

        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach(entry => {
              if (entry.isIntersecting && entry.intersectionRatio > 0.5) {
                const index = parseInt(entry.target.dataset.cardIndex);
                this.setActiveCard(index);
              }
            });
          },
          {
            root: this.scrollContainer,
            threshold: [0.5, 0.75, 1]
          }
        );

        this.cards.forEach(card => observer.observe(card));
        this.updateNavButtons();
      }

      setupNavigation() {
        if (!this.prevButton || !this.nextButton || window.innerWidth > 749) return;

        this.prevButton.addEventListener('click', () => {
          this.scrollToPrevious();
        });

        this.nextButton.addEventListener('click', () => {
          this.scrollToNext();
        });
      }

      scrollToPrevious() {
        if (this.currentIndex > 0) {
          this.scrollToCard(this.currentIndex - 1);
        }
      }

      scrollToNext() {
        if (this.currentIndex < this.cards.length - 1) {
          this.scrollToCard(this.currentIndex + 1);
        }
      }

      scrollToCard(index) {
        if (!this.scrollContainer || !this.cards[index]) return;

        const card = this.cards[index];
        const containerRect = this.scrollContainer.getBoundingClientRect();
        const cardRect = card.getBoundingClientRect();
        const scrollLeft = this.scrollContainer.scrollLeft;
        const offset = cardRect.left - containerRect.left;

        this.scrollContainer.scrollTo({
          left: scrollLeft + offset,
          behavior: 'smooth'
        });
      }

      updateActiveCard() {
        if (!this.scrollContainer) return;

        const scrollLeft = this.scrollContainer.scrollLeft;
        const cardWidth = this.cards[0]?.offsetWidth || 0;
        const gap = parseInt(getComputedStyle(this.scrollContainer).gap) || 0;
        const index = Math.round(scrollLeft / (cardWidth + gap));
        
        this.setActiveCard(index);
      }

      setActiveCard(index) {
        if (index === this.currentIndex || index < 0 || index >= this.cards.length) return;
        
        this.currentIndex = index;
        
        this.dots.forEach((dot, i) => {
          if (i === index) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });

        this.updateNavButtons();
      }

      updateNavButtons() {
        if (!this.prevButton || !this.nextButton) return;

        if (this.currentIndex === 0) {
          this.prevButton.disabled = true;
        } else {
          this.prevButton.disabled = false;
        }

        if (this.currentIndex === this.cards.length - 1) {
          this.nextButton.disabled = true;
        } else {
          this.nextButton.disabled = false;
        }
      }
    }

    customElements.define('luxury-collection-{{ ai_gen_id }}', LuxuryCollection{{ ai_gen_id }});
  })();
</script>

