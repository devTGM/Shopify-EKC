    font-weight: 400;
    position: relative;
    display: inline-block;
  }

  .ai-collection-highlight__card-title-underline-{{ ai_gen_id }} {
    position: absolute;
    bottom: -{{ block.settings.title_underline_margin }}px;
    left: 0;
    width: 0;
    height: {{ block.settings.underline_thickness }}px;
    background-color: {{ block.settings.underline_color }};
    transition: width 0.4s ease;
  }

  .ai-collection-highlight__card-{{ ai_gen_id }}:hover .ai-collection-highlight__card-title-underline-{{ ai_gen_id }} {
    width: 100%;
  }

  .ai-collection-highlight__card-subtitle-{{ ai_gen_id }} {
    font-family: {{ block.settings.body_font }}, sans-serif;
    font-size: {{ block.settings.card_subtitle_size }}px;
    line-height: 1.4;
    color: {{ block.settings.card_subtitle_color }};
    margin: {{ block.settings.subtitle_margin_top }}px 0 0;
  }

  .ai-collection-highlight__nav-button-{{ ai_gen_id }} {
    display: none;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: {{ block.settings.arrow_size }}px;
    height: {{ block.settings.arrow_size }}px;
    background-color: {{ block.settings.arrow_background }};
    border: none;
    border-radius: 50%;
    cursor: pointer;
    z-index: 10;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease, opacity 0.3s ease;
    opacity: {{ block.settings.arrow_opacity | divided_by: 100.0 }};
  }

  .ai-collection-highlight__nav-button-{{ ai_gen_id }}:active {
    background-color: {{ block.settings.arrow_hover_background }};
  }

  .ai-collection-highlight__nav-button-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-collection-highlight__nav-button-{{ ai_gen_id }}--prev {
