    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-latest-arrivals__container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .ai-latest-arrivals__header-{{ ai_gen_id }} {
    display: flex;
    {% if block.settings.tab_alignment == 'center' %}
      justify-content: center;
      flex-direction: column;
      align-items: center;
      text-align: center;
    {% else %}
      justify-content: space-between;
      align-items: center;
    {% endif %}
    margin-bottom: {{ block.settings.header_spacing }}px;
    gap: 20px;
  }

  .ai-latest-arrivals__title-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    font-weight: 400;
    letter-spacing: -0.02em;
  }

  .ai-latest-arrivals__tabs-{{ ai_gen_id }} {
    display: flex;
    gap: 32px;
  }

  .ai-latest-arrivals__tab-{{ ai_gen_id }} {
    background: none;
    border: none;
    padding: 0 0 8px 0;
    font-size: {{ block.settings.tab_size }}px;
    color: {{ block.settings.tab_color }};
    cursor: pointer;
    position: relative;
    transition: color 200ms ease-in-out;
    font-weight: 400;
    letter-spacing: 0.02em;
  }

  .ai-latest-arrivals__tab-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: {{ block.settings.tab_active_color }};
    transform: scaleX(0);
    transition: transform 200ms ease-in-out;
  }

  .ai-latest-arrivals__tab-{{ ai_gen_id }}.active {
    color: {{ block.settings.tab_active_color }};
  }

  .ai-latest-arrivals__tab-{{ ai_gen_id }}.active::after {
    transform: scaleX(1);
  }

  .ai-latest-arrivals__tab-{{ ai_gen_id }}:hover {
    color: {{ block.settings.tab_active_color }};
  }

  .ai-latest-arrivals__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-latest-arrivals__product-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    color: inherit;
    transition: transform 200ms ease-in-out;
  }

  .ai-latest-arrivals__product-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-latest-arrivals__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
    background-color: {{ block.settings.image_background }};
    margin-bottom: {{ block.settings.content_spacing }}px;
  }

  .ai-latest-arrivals__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 200ms ease-in-out;
  }

  .ai-latest-arrivals__product-{{ ai_gen_id }}:hover .ai-latest-arrivals__image-{{ ai_gen_id }} {
    opacity: 0.9;
  }

  .ai-latest-arrivals__badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    left: 12px;
    padding: 6px 12px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    font-size: 11px;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    font-weight: 500;
  }

  .ai-latest-arrivals__product-info-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-latest-arrivals__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0;
    font-weight: 400;
    letter-spacing: 0.01em;
    line-height: 1.3;
  }

  .ai-latest-arrivals__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 400;
  }

  .ai-latest-arrivals__swatches-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    margin-top: 4px;
  }

  .ai-latest-arrivals__swatch-{{ ai_gen_id }} {
    width: {{ block.settings.swatch_size }}px;
    height: {{ block.settings.swatch_size }}px;
    border-radius: 50%;
    border: 1px solid {{ block.settings.swatch_border_color }};
    cursor: pointer;
    transition: transform 150ms ease-in-out, box-shadow 150ms ease-in-out;
  }

  .ai-latest-arrivals__swatch-{{ ai_gen_id }}:hover {
    transform: scale(1.15);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .ai-latest-arrivals__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.image_background }};
  }

  .ai-latest-arrivals__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-latest-arrivals__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.tab_color }};
    font-size: 14px;
  }

  @media screen and (max-width: 989px) {
    .ai-latest-arrivals__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
    }

