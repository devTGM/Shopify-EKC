    }
  }
{% endstyle %}

<latest-arrivals-{{ ai_gen_id }} class="ai-latest-arrivals-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-latest-arrivals__container-{{ ai_gen_id }}">
    <div class="ai-latest-arrivals__header-{{ ai_gen_id }}">
      <h2 class="ai-latest-arrivals__title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
      <div class="ai-latest-arrivals__tabs-{{ ai_gen_id }}">
        <button 
          class="ai-latest-arrivals__tab-{{ ai_gen_id }} active" 
          data-tab="new-arrivals"
          aria-pressed="true"
        >
          {{ block.settings.tab_new_arrivals }}
        </button>
        <button 
          class="ai-latest-arrivals__tab-{{ ai_gen_id }}" 
          data-tab="best-sellers"
          aria-pressed="false"
        >
          {{ block.settings.tab_best_sellers }}
        </button>
      </div>
    </div>

    <div class="ai-latest-arrivals__grid-{{ ai_gen_id }}" data-products-container>
      {% liquid
        assign new_arrivals = block.settings.new_arrivals_products
        assign best_sellers = block.settings.best_sellers_products
        assign active_products = new_arrivals
      %}

      {% if active_products.count > 0 %}
        {% for product in active_products limit: 4 %}
          <a 
            href="{{ product.url }}" 
            class="ai-latest-arrivals__product-{{ ai_gen_id }}"
            data-product-type="new-arrivals"
          >
            <div class="ai-latest-arrivals__image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-latest-arrivals__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="800"
                  height="{{ 800 | divided_by: block.settings.image_aspect_ratio }}"
                >
              {% else %}
                <div class="ai-latest-arrivals__placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
              
              {% if block.settings.show_new_badge and forloop.index == 1 %}
                <span class="ai-latest-arrivals__badge-{{ ai_gen_id }}">{{ block.settings.badge_text }}</span>
              {% endif %}
            </div>

            <div class="ai-latest-arrivals__product-info-{{ ai_gen_id }}">
              <h3 class="ai-latest-arrivals__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
              <div class="ai-latest-arrivals__price-{{ ai_gen_id }}">
                {{ product.price | money }}
              </div>

              {% if block.settings.show_color_swatches and product.options_with_values.size > 0 %}
                {% for option in product.options_with_values %}
                  {% if option.name == 'Color' or option.name == 'Colour' %}
                    <div class="ai-latest-arrivals__swatches-{{ ai_gen_id }}">
                      {% for value in option.values limit: 4 %}
                        {% assign color_value = value | downcase | replace: ' ', '-' %}
                        <span 
                          class="ai-latest-arrivals__swatch-{{ ai_gen_id }}"
                          style="background-color: {{ value | handle }};"
                          title="{{ value }}"
                        ></span>
                      {% endfor %}
                    </div>
                  {% endif %}
                {% endfor %}
              {% endif %}
            </div>
          </a>
        {% endfor %}
      {% else %}
        <div class="ai-latest-arrivals__empty-state-{{ ai_gen_id }}" style="grid-column: 1 / -1;">
          Next, add products to showcase in this collection
        </div>
      {% endif %}
    </div>
  </div>
</latest-arrivals-{{ ai_gen_id }}>

<script>
  (function() {
    class LatestArrivals{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.tabs = this.querySelectorAll('.ai-latest-arrivals__tab-{{ ai_gen_id }}');
        this.productsContainer = this.querySelector('[data-products-container]');
        
        this.newArrivals = {{ block.settings.new_arrivals_products | json }};
        this.bestSellers = {{ block.settings.best_sellers_products | json }};
      }

      connectedCallback() {
        this.setupTabs();
      }

      setupTabs() {
        this.tabs.forEach(tab => {
          tab.addEventListener('click', (e) => {
            const tabType = e.target.dataset.tab;
            
            this.tabs.forEach(t => {
              t.classList.remove('active');
              t.setAttribute('aria-pressed', 'false');
            });
            
            e.target.classList.add('active');
            e.target.setAttribute('aria-pressed', 'true');
            
            this.filterProducts(tabType);
          });
        });
      }

      filterProducts(tabType) {
        const products = this.productsContainer.querySelectorAll('.ai-latest-arrivals__product-{{ ai_gen_id }}');
        
        products.forEach(product => {
          const productType = product.dataset.productType;
          
          if (productType === tabType) {
            product.style.display = 'block';
          } else {
            product.style.display = 'none';
          }
        });
      }
    }

    customElements.define('latest-arrivals-{{ ai_gen_id }}', LatestArrivals{{ ai_gen_id }});
  })();
</script>

