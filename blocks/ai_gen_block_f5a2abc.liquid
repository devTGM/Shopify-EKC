    }

    .ai-product-grid-header-{{ ai_gen_id }} {
      margin-bottom: {{ block.settings.header_spacing | times: 0.7 }}px;
    }

    .ai-product-grid-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.6 }}px;
    }

    .ai-product-grid-link-{{ ai_gen_id }} {
      font-size: {{ block.settings.link_size | times: 0.9 }}px;
    }

    .ai-product-grid-items-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.6 }}px;
    }

    .ai-product-card-title-{{ ai_gen_id }} {
