    display: inline-flex;
    align-items: center;
    gap: 12px;
    color: {{ block.settings.cta_color }};
    text-decoration: none;
    font-size: {{ block.settings.cta_size }}px;
    font-weight: 500;
    transition: gap 0.3s ease;
  }

  .ai-editorial-cta-{{ ai_gen_id }}:hover {
    gap: 16px;
  }

  .ai-editorial-cta-arrow-{{ ai_gen_id }} {
    width: 24px;
    height: 24px;
    transition: transform 0.3s ease;
  }

  .ai-editorial-cta-{{ ai_gen_id }}:hover .ai-editorial-cta-arrow-{{ ai_gen_id }} {
    transform: translateX(4px);
  }

  .ai-editorial-controls-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 24px;
    margin-top: 48px;
  }

  .ai-editorial-arrows-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
  }

  .ai-editorial-arrow-{{ ai_gen_id }} {
    width: 48px;
    height: 48px;
    border: 1px solid {{ block.settings.arrow_color }};
    background: transparent;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }

