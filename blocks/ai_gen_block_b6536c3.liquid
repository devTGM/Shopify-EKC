<editorial-carousel-{{ ai_gen_id }}
  class="ai-editorial-section-{{ ai_gen_id }}"
  data-autoplay="{{ block.settings.autoplay }}"
  data-interval="{{ block.settings.rotation_interval }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-editorial-container-{{ ai_gen_id }}">
    <div class="ai-editorial-image-side-{{ ai_gen_id }}">
      <div class="ai-editorial-image-wrapper-{{ ai_gen_id }}">
        {% for i in (1..4) %}
          {% liquid
            assign image_key = 'slide_' | append: i | append: '_image'
            assign headline_key = 'slide_' | append: i | append: '_headline'
            assign slide_image = block.settings[image_key]
            assign headline = block.settings[headline_key]
          %}

          {% if headline != blank %}
            {% if slide_image %}
              <img
                src="{{ slide_image | image_url: width: 1200 }}"
                alt="{{ slide_image.alt | escape }}"
                loading="lazy"
                width="{{ slide_image.width }}"
                height="{{ slide_image.height }}"
                class="ai-editorial-image-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
                data-slide="{{ forloop.index }}"
              >
            {% else %}
              <div
                class="ai-editorial-image-placeholder-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
                data-slide="{{ forloop.index }}"
              >
                {{ 'lifestyle-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="ai-editorial-content-side-{{ ai_gen_id }}">
      <div class="ai-editorial-slides-{{ ai_gen_id }}">
        {% for i in (1..4) %}
          {% liquid
            assign label_key = 'slide_' | append: i | append: '_label'
            assign headline_key = 'slide_' | append: i | append: '_headline'
            assign description_key = 'slide_' | append: i | append: '_description'
            assign cta_text_key = 'slide_' | append: i | append: '_cta_text'
            assign cta_url_key = 'slide_' | append: i | append: '_cta_url'
            assign show_cta_key = 'slide_' | append: i | append: '_show_cta'

            assign label = block.settings[label_key]
            assign headline = block.settings[headline_key]
            assign description = block.settings[description_key]
            assign cta_text = block.settings[cta_text_key]
            assign cta_url = block.settings[cta_url_key]
            assign show_cta = block.settings[show_cta_key]
          %}

          {% if headline != blank %}
            <div
              class="ai-editorial-slide-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
              data-slide="{{ forloop.index }}"
            >
              {% if label != blank %}
                <div class="ai-editorial-label-{{ ai_gen_id }}">{{ label }}</div>
              {% endif %}

              <h2 class="ai-editorial-headline-{{ ai_gen_id }}">{{ headline }}</h2>

              {% if description != blank %}
                <div class="ai-editorial-description-{{ ai_gen_id }}">{{ description }}</div>
              {% endif %}

              {% if show_cta and cta_text != blank %}
                <a
                  href="{{ cta_url }}"
                  class="ai-editorial-cta-{{ ai_gen_id }}"
                >
                  {{ cta_text }}
                  <svg
                    class="ai-editorial-cta-arrow-{{ ai_gen_id }}"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
                </a>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <div class="ai-editorial-controls-{{ ai_gen_id }}">
        <div class="ai-editorial-arrows-{{ ai_gen_id }}">
          <button
            class="ai-editorial-arrow-{{ ai_gen_id }} ai-editorial-prev-{{ ai_gen_id }}"
            aria-label="Previous slide"
          >
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
          </button>
          <button
            class="ai-editorial-arrow-{{ ai_gen_id }} ai-editorial-next-{{ ai_gen_id }}"
            aria-label="Next slide"
          >
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </button>
        </div>
        <div class="ai-editorial-progress-container-{{ ai_gen_id }}">
          <div class="ai-editorial-progress-bar-{{ ai_gen_id }}"></div>
        </div>
      </div>
    </div>
  </div>
</editorial-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class EditorialCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.slides = [];
        this.images = [];
        this.autoplayInterval = null;
        this.progressInterval = null;
        this.isPaused = false;
        this.touchStartX = 0;
        this.touchEndX = 0;
      }

      connectedCallback() {
        this.slides = Array.from(this.querySelectorAll('.ai-editorial-slide-{{ ai_gen_id }}'));
        this.images = Array.from(this.querySelectorAll('.ai-editorial-image-{{ ai_gen_id }}, .ai-editorial-image-placeholder-{{ ai_gen_id }}'));
        this.totalSlides = this.slides.filter(slide => slide.querySelector('.ai-editorial-headline-{{ ai_gen_id }}')).length;
        
        if (this.totalSlides === 0) return;

        this.prevButton = this.querySelector('.ai-editorial-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-editorial-next-{{ ai_gen_id }}');
        this.progressBar = this.querySelector('.ai-editorial-progress-bar-{{ ai_gen_id }}');
        this.slidesContainer = this.querySelector('.ai-editorial-slides-{{ ai_gen_id }}');

        this.autoplay = this.dataset.autoplay === 'true';
        this.interval = parseInt(this.dataset.interval) * 1000;

        this.setupEventListeners();
        
        if (this.autoplay) {
          this.startAutoplay();
        }
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.previousSlide());
        }
        
        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.nextSlide());
        }

        this.addEventListener('mouseenter', () => {
          if (this.autoplay) {
            this.pauseAutoplay();
          }
        });

        this.addEventListener('mouseleave', () => {
          if (this.autoplay && this.isPaused) {
            this.resumeAutoplay();
          }
        });

        this.slidesContainer.addEventListener('touchstart', (e) => {
          this.touchStartX = e.changedTouches[0].screenX;
        });

        this.slidesContainer.addEventListener('touchend', (e) => {
          this.touchEndX = e.changedTouches[0].screenX;
          this.handleSwipe();
        });
      }

      handleSwipe() {
        const swipeThreshold = 50;
        const diff = this.touchStartX - this.touchEndX;

        if (Math.abs(diff) > swipeThreshold) {
          if (diff > 0) {
            this.nextSlide();
          } else {
            this.previousSlide();
          }
        }
      }

      showSlide(index) {
        this.slides.forEach((slide, i) => {
          if (i === index) {
            slide.classList.add('active');
          } else {
            slide.classList.remove('active');
          }
        });

        this.images.forEach((image, i) => {
          if (i === index) {
            image.classList.add('active');
          } else {
            image.classList.remove('active');
          }
        });

        this.currentSlide = index;
        this.resetProgress();
      }

      nextSlide() {
        const nextIndex = (this.currentSlide + 1) % this.totalSlides;
        this.showSlide(nextIndex);
      }

      previousSlide() {
        const prevIndex = (this.currentSlide - 1 + this.totalSlides) % this.totalSlides;
        this.showSlide(prevIndex);
      }

      startAutoplay() {
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, this.interval);
        this.startProgress();
      }

      pauseAutoplay() {
        this.isPaused = true;
        clearInterval(this.autoplayInterval);
        clearInterval(this.progressInterval);
      }

      resumeAutoplay() {
        this.isPaused = false;
        this.startAutoplay();
      }

      startProgress() {
        let progress = 0;
        const step = 100 / (this.interval / 100);
        
        this.progressInterval = setInterval(() => {
          progress += step;
          if (this.progressBar) {
            this.progressBar.style.width = progress + '%';
          }
          if (progress >= 100) {
            progress = 0;
          }
        }, 100);
      }

      resetProgress() {
        if (this.progressBar) {
          this.progressBar.style.width = '0%';
        }
        clearInterval(this.progressInterval);
        if (this.autoplay && !this.isPaused) {
          this.startProgress();
        }
      }

      disconnectedCallback() {
        clearInterval(this.autoplayInterval);
        clearInterval(this.progressInterval);
      }
    }

    customElements.define('editorial-carousel-{{ ai_gen_id }}', EditorialCarousel{{ ai_gen_id }});
  })();
</script>

