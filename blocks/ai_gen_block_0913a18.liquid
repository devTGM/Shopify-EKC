    background-color: rgba(0, 0, 0, 0.6);
    border: none;
    border-radius: 50%;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: #ffffff;
    transition: background-color 0.2s ease;
  }

  .ai-testimonial-carousel__volume-btn-{{ ai_gen_id }}:hover {
    background-color: rgba(0, 0, 0, 0.8);
  }

