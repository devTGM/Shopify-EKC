    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 0;
    overflow: hidden;
  }

  .ai-testimonial-carousel__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
    padding: 0 20px;
  }

  .ai-testimonial-carousel__heading-{{ ai_gen_id }} {
    font-family: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
    font-weight: {{ settings.type_heading_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.subheading_spacing }}px;
  }

  .ai-testimonial-carousel__subheading-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
  }

  .ai-testimonial-carousel__track-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-testimonial-carousel__track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    will-change: transform;
    cursor: grab;
    user-select: none;
  }

  .ai-testimonial-carousel__track-{{ ai_gen_id }}.is-dragging {
    cursor: grabbing;
  }

  .ai-testimonial-carousel__track-{{ ai_gen_id }}.is-paused {
    animation-play-state: paused;
  }

  .ai-testimonial-carousel__card-{{ ai_gen_id }} {
    flex: 0 0 auto;
    width: {{ block.settings.card_width_desktop }}px;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    {% if block.settings.card_shadow %}
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    {% endif %}
  }

