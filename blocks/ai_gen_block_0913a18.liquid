<script>
  (function() {
    class TestimonialCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('[data-track]');
        this.autoScroll = this.dataset.autoScroll === 'true';
        this.scrollSpeed = parseFloat(this.dataset.scrollSpeed);
        this.pauseOnHover = this.dataset.pauseOnHover === 'true';
        this.isDragging = false;
        this.startX = 0;
        this.scrollLeft = 0;
        this.animationId = null;
        this.currentTranslate = 0;
      }

      connectedCallback() {
        this.setupVolumeControls();
        this.setupDragControls();
        
        if (this.autoScroll) {
          this.startAutoScroll();
        }

        if (this.pauseOnHover) {
          this.setupHoverPause();
        }
      }

      disconnectedCallback() {
        if (this.animationId) {
          cancelAnimationFrame(this.animationId);
        }
      }

      setupVolumeControls() {
        const volumeButtons = this.querySelectorAll('[data-volume-toggle]');
        
        volumeButtons.forEach(button => {
          button.addEventListener('click', (e) => {
            e.stopPropagation();
            const card = button.closest('.ai-testimonial-carousel__card-{{ ai_gen_id }}');
            const video = card.querySelector('[data-video]');
            const mutedIcon = button.querySelector('[data-muted-icon]');
            const unmutedIcon = button.querySelector('[data-unmuted-icon]');
            
            if (video) {
              video.muted = !video.muted;
              
              if (video.muted) {
                mutedIcon.style.display = 'block';
                unmutedIcon.style.display = 'none';
              } else {
                mutedIcon.style.display = 'none';
                unmutedIcon.style.display = 'block';
              }
            }
          });
        });
      }

      setupDragControls() {
        this.track.addEventListener('mousedown', this.handleDragStart.bind(this));
        this.track.addEventListener('touchstart', this.handleDragStart.bind(this));
        
        this.track.addEventListener('mousemove', this.handleDragMove.bind(this));
        this.track.addEventListener('touchmove', this.handleDragMove.bind(this));
        
        this.track.addEventListener('mouseup', this.handleDragEnd.bind(this));
        this.track.addEventListener('mouseleave', this.handleDragEnd.bind(this));
        this.track.addEventListener('touchend', this.handleDragEnd.bind(this));
      }

      handleDragStart(e) {
        this.isDragging = true;
        this.track.classList.add('is-dragging');
        
        const clientX = e.type === 'touchstart' ? e.touches[0].clientX : e.clientX;
        this.startX = clientX;
        this.scrollLeft = this.currentTranslate;

        if (this.autoScroll && this.animationId) {
          cancelAnimationFrame(this.animationId);
        }
      }

      handleDragMove(e) {
        if (!this.isDragging) return;
        
        e.preventDefault();
        const clientX = e.type === 'touchmove' ? e.touches[0].clientX : e.clientX;
        const deltaX = clientX - this.startX;
        this.currentTranslate = this.scrollLeft + deltaX;
        this.track.style.transform = `translateX(${this.currentTranslate}px)`;
      }

      handleDragEnd() {
        if (!this.isDragging) return;
        
        this.isDragging = false;
        this.track.classList.remove('is-dragging');

        if (this.autoScroll) {
          this.startAutoScroll();
        }
      }

      startAutoScroll() {
        const scroll = () => {
          if (this.isDragging) return;

          this.currentTranslate -= this.scrollSpeed;
          
          const trackWidth = this.track.scrollWidth / 2;
          
          if (Math.abs(this.currentTranslate) >= trackWidth) {
            this.currentTranslate = 0;
          }
          
          this.track.style.transform = `translateX(${this.currentTranslate}px)`;
          this.animationId = requestAnimationFrame(scroll);
        };
        
        this.animationId = requestAnimationFrame(scroll);
      }

      setupHoverPause() {
        this.addEventListener('mouseenter', () => {
          if (this.autoScroll && this.animationId) {
            cancelAnimationFrame(this.animationId);
            this.track.classList.add('is-paused');
          }
        });

        this.addEventListener('mouseleave', () => {
          if (this.autoScroll && !this.isDragging) {
            this.track.classList.remove('is-paused');
            this.startAutoScroll();
          }
        });
      }
    }

    customElements.define('testimonial-carousel-{{ ai_gen_id }}', TestimonialCarousel{{ ai_gen_id }});
  })();
</script>

