{% doc %}
  @prompt
    Ann Image with text option which has option to keep the image either on left or right, can control image aspect ratio.
    
    It should be fully optimised for mobile and desktop, This section should have text alignment option on both mobile and desktop view
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-text-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-image-text-container-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.spacing }}px;
    width: 100%;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-image-text-container-{{ ai_gen_id }}--reverse {
    flex-direction: row-reverse;
  }

  .ai-image-text-image-wrapper-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.image_width }}%;
    width: {{ block.settings.image_width }}%;
  }

  .ai-image-text-image-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-image-text-image-container-{{ ai_gen_id }}::before {
    content: '';
    display: block;
    padding-bottom: {{ block.settings.aspect_ratio }}%;
  }

  .ai-image-text-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-image-text-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-image-text-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-image-text-content-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.text_spacing }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-image-text-heading-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
  }

  .ai-image-text-text-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
  }

  .ai-image-text-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    transition: all 0.3s ease;
    {% if block.settings.text_alignment == 'left' %}
      align-self: flex-start;
    {% elsif block.settings.text_alignment == 'center' %}
      align-self: center;
    {% elsif block.settings.text_alignment == 'right' %}
      align-self: flex-end;
    {% endif %}
  }

  .ai-image-text-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-image-text-container-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.mobile_spacing }}px;
      padding: {{ block.settings.mobile_padding_vertical }}px {{ block.settings.mobile_padding_horizontal }}px;
    }

    .ai-image-text-container-{{ ai_gen_id }}--reverse {
      flex-direction: column;
    }

    .ai-image-text-image-wrapper-{{ ai_gen_id }} {
      flex: 0 0 100%;
      width: 100%;
    }

    .ai-image-text-content-{{ ai_gen_id }} {
      text-align: {{ block.settings.mobile_text_alignment }};
    }

    .ai-image-text-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
    }

    .ai-image-text-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_text_size }}px;
    }

    .ai-image-text-button-{{ ai_gen_id }} {
      {% if block.settings.mobile_text_alignment == 'left' %}
        align-self: flex-start;
      {% elsif block.settings.mobile_text_alignment == 'center' %}
        align-self: center;
      {% elsif block.settings.mobile_text_alignment == 'right' %}
        align-self: flex-end;
      {% endif %}
    }
  }
{% endstyle %}

<ai-image-text-{{ ai_gen_id }} class="ai-image-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-text-container-{{ ai_gen_id }} {% if block.settings.image_position == 'right' %}ai-image-text-container-{{ ai_gen_id }}--reverse{% endif %}">
    <div class="ai-image-text-image-wrapper-{{ ai_gen_id }}">
      <div class="ai-image-text-image-container-{{ ai_gen_id }}">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 1500 }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
            class="ai-image-text-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-image-text-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>

    <div class="ai-image-text-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-image-text-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}

      {% if block.settings.text != blank %}
        <div class="ai-image-text-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
      {% endif %}

      {% if block.settings.button_text != blank and block.settings.button_link != blank %}
        <a href="{{ block.settings.button_link }}" class="ai-image-text-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</ai-image-text-{{ ai_gen_id }}>

