              assign enabled_key = 'enable_collection_' | append: i
              assign featured_image_key = 'featured_image_' | append: i

              assign is_enabled = block.settings[enabled_key]
              assign featured_image = block.settings[featured_image_key]
            %}

            {% if is_enabled %}
              <div class="ai-split-hero__featured-slide-{{ ai_gen_id }}" data-featured-slide="{{ i }}">
                {% if featured_image %}
                  <img
                    src="{{ featured_image | image_url: width: 2000 }}"
                    alt="{{ featured_image.alt | escape }}"
                    loading="lazy"
                    width="{{ featured_image.width }}"
                    height="{{ featured_image.height }}"
                    class="ai-split-hero__featured-image-{{ ai_gen_id }}"
                    style="aspect-ratio: {{ block.settings.featured_image_ratio }};"
                  >
                {% else %}
                  <div class="ai-split-hero__featured-placeholder-{{ ai_gen_id }}">
                    {{ 'hero-apparel-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>

    <div class="ai-split-hero__collection-side-{{ ai_gen_id }}">
      <div class="ai-split-hero__carousel-wrapper-{{ ai_gen_id }}">
        <div class="ai-split-hero__carousel-{{ ai_gen_id }}">
          <div class="ai-split-hero__carousel-track-{{ ai_gen_id }}">
            {% for i in (1..10) %}
              {% liquid
                assign enabled_key = 'enable_collection_' | append: i
                assign collection_key = 'collection_' | append: i
                assign image_key = 'collection_image_' | append: i
                assign label_key = 'label_' | append: i
                assign badge_key = 'badge_' | append: i
                assign button_text_key = 'button_text_' | append: i

                assign is_enabled = block.settings[enabled_key]
                assign collection = block.settings[collection_key]
                assign custom_image = block.settings[image_key]
                assign label = block.settings[label_key]
                assign badge = block.settings[badge_key]
                assign button_text = block.settings[button_text_key]
              %}

              {% if is_enabled and collection %}
                <div class="ai-split-hero__slide-{{ ai_gen_id }}" data-slide="{{ i }}">
                  <div class="ai-split-hero__card-{{ ai_gen_id }}">
                    {% if label != blank %}
                      <div class="ai-split-hero__label-{{ ai_gen_id }}">{{ label }}</div>
                    {% endif %}

                    <div class="ai-split-hero__image-wrapper-{{ ai_gen_id }}">
                      {% if custom_image %}
                        <img
                          src="{{ custom_image | image_url: width: 1000 }}"
                          alt="{{ custom_image.alt | escape }}"
                          loading="lazy"
                          width="1000"
                          height="1000"
                          class="ai-split-hero__image-{{ ai_gen_id }}"
                        >
                      {% elsif collection.image %}
                        <img
                          src="{{ collection.image | image_url: width: 1000 }}"
                          alt="{{ collection.image.alt | default: collection.title | escape }}"
                          loading="lazy"
                          width="1000"
                          height="1000"
                          class="ai-split-hero__image-{{ ai_gen_id }}"
                        >
                      {% elsif collection.products.first and collection.products.first.featured_image %}
                        <img
                          src="{{ collection.products.first.featured_image | image_url: width: 1000 }}"
                          alt="{{ collection.products.first.featured_image.alt | default: collection.title | escape }}"
                          loading="lazy"
                          width="1000"
                          height="1000"
                          class="ai-split-hero__image-{{ ai_gen_id }}"
                        >
                      {% else %}
                        <div class="ai-split-hero__image-placeholder-{{ ai_gen_id }}">
                          {{ 'collection-apparel-1' | placeholder_svg_tag }}
                        </div>
                      {% endif %}

                      {% if badge != blank %}
                        <div class="ai-split-hero__badge-{{ ai_gen_id }}">{{ badge }}</div>
                      {% endif %}
                    </div>

                    <h2 class="ai-split-hero__title-{{ ai_gen_id }}">{{ collection.title }}</h2>
                    <a href="{{ collection.url }}" class="ai-split-hero__button-{{ ai_gen_id }}">
                      {% if button_text != blank %}
                        {{ button_text }}
                      {% else %}
                        Shop Now
                      {% endif %}
                    </a>
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>

        <div class="ai-split-hero__navigation-{{ ai_gen_id }}">
          <button class="ai-split-hero__nav-button-{{ ai_gen_id }}" data-nav="prev" aria-label="Previous collection">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
          </button>

          <div class="ai-split-hero__dots-{{ ai_gen_id }}">
            {% assign dot_index = 0 %}
            {% for i in (1..10) %}
              {% assign enabled_key = 'enable_collection_' | append: i %}
              {% assign collection_key = 'collection_' | append: i %}
              {% assign is_enabled = block.settings[enabled_key] %}
              {% assign collection = block.settings[collection_key] %}
              {% if is_enabled and collection %}
