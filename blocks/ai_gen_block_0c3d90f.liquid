<script>
  (function() {
    class PremiumSplitHero{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 1;
        this.isAnimating = false;
        this.touchStartX = 0;
        this.touchEndX = 0;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-split-hero__carousel-track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-split-hero__slide-{{ ai_gen_id }}');
        this.featuredTrack = this.querySelector('.ai-split-hero__featured-track-{{ ai_gen_id }}');
        this.featuredSlides = this.querySelectorAll('.ai-split-hero__featured-slide-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-split-hero__dot-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('[data-nav="prev"]');
        this.nextButton = this.querySelector('[data-nav="next"]');
        this.totalSlides = this.slides.length;

        if (this.totalSlides > 0) {
          this.slides[0].classList.add('active');
          if (this.featuredSlides.length > 0) {
            this.featuredSlides[0].classList.add('active');
          }
          if (this.dots.length > 0) {
            this.dots[0].classList.add('active');
          }
          this.setupEventListeners();
        }
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.navigate('prev'));
        }
        
        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.navigate('next'));
        }

        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToSlide(index + 1));
        });

        this.track.addEventListener('touchstart', (e) => {
          this.touchStartX = e.changedTouches[0].screenX;
        });

        this.track.addEventListener('touchend', (e) => {
          this.touchEndX = e.changedTouches[0].screenX;
          this.handleSwipe();
        });
      }

      handleSwipe() {
        const swipeThreshold = 50;
        const diff = this.touchStartX - this.touchEndX;

        if (Math.abs(diff) > swipeThreshold) {
          if (diff > 0) {
            this.navigate('next');
          } else {
            this.navigate('prev');
          }
        }
      }

      navigate(direction) {
        if (this.isAnimating || this.totalSlides === 0) return;

        if (direction === 'next') {
          this.currentSlide = this.currentSlide === this.totalSlides ? 1 : this.currentSlide + 1;
        } else {
          this.currentSlide = this.currentSlide === 1 ? this.totalSlides : this.currentSlide - 1;
        }

        this.updateCarousel();
      }

      goToSlide(slideNumber) {
        if (this.isAnimating || slideNumber === this.currentSlide || this.totalSlides === 0) return;
        this.currentSlide = slideNumber;
        this.updateCarousel();
      }

      updateCarousel() {
        this.isAnimating = true;

        this.slides.forEach((slide, index) => {
          if (index + 1 === this.currentSlide) {
            slide.classList.add('active');
          } else {
            slide.classList.remove('active');
          }
        });

        this.featuredSlides.forEach((slide, index) => {
          if (index + 1 === this.currentSlide) {
            slide.classList.add('active');
          } else {
            slide.classList.remove('active');
          }
        });

        this.dots.forEach((dot, index) => {
          if (index + 1 === this.currentSlide) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });

        const offset = -(this.currentSlide - 1) * 100;
        this.track.style.transform = `translateX(${offset}%)`;
        this.featuredTrack.style.transform = `translateX(${offset}%)`;

        setTimeout(() => {
          this.isAnimating = false;
        }, 600);
      }
    }

    customElements.define('premium-split-hero-{{ ai_gen_id }}', PremiumSplitHero{{ ai_gen_id }});
  })();
</script>

