      display: block;
    }

    .ai-hero-slider__media-mobile-{{ ai_gen_id }} {
      display: none;
    }
  }
{% endstyle %}

<hero-slider-{{ ai_gen_id }} class="ai-hero-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-slider__viewport-{{ ai_gen_id }}">
    <div class="ai-hero-slider__track-{{ ai_gen_id }}">
      {% for i in (1..8) %}
        {% liquid
          assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
          assign desktop_image_key = 'slide_' | append: i | append: '_desktop_image'
          assign mobile_image_key = 'slide_' | append: i | append: '_mobile_image'
          assign video_key = 'slide_' | append: i | append: '_video'
          assign heading_key = 'slide_' | append: i | append: '_heading'
          assign subheading_key = 'slide_' | append: i | append: '_subheading'
          assign button_text_key = 'slide_' | append: i | append: '_button_text'
          assign button_link_key = 'slide_' | append: i | append: '_button_link'
          assign slide_link_key = 'slide_' | append: i | append: '_slide_link'

          assign slide_enabled = block.settings[slide_enabled_key]
          assign desktop_image = block.settings[desktop_image_key]
          assign mobile_image = block.settings[mobile_image_key]
          assign video = block.settings[video_key]
          assign heading = block.settings[heading_key]
          assign subheading = block.settings[subheading_key]
          assign button_text = block.settings[button_text_key]
          assign button_link = block.settings[button_link_key]
          assign slide_link = block.settings[slide_link_key]
        %}

        {% if slide_enabled %}
          <div class="ai-hero-slider__slide-{{ ai_gen_id }}" data-slide="{{ i }}">
            {% if slide_link != blank %}
              <a href="{{ slide_link }}" class="ai-hero-slider__slide-link-{{ ai_gen_id }}" aria-label="{{ heading | default: 'View slide' | escape }}"></a>
            {% endif %}

            {% if video != blank %}
              <video
                class="ai-hero-slider__video-{{ ai_gen_id }}"
                autoplay
                muted
                loop
                playsinline
              >
                <source src="{{ video }}" type="video/mp4">
              </video>
            {% else %}
              {% if desktop_image != blank %}
                <img
                  src="{{ desktop_image | image_url: width: 2000 }}"
                  alt="{{ desktop_image.alt | escape }}"
                  loading="lazy"
                  width="{{ desktop_image.width }}"
                  height="{{ desktop_image.height }}"
                  class="ai-hero-slider__media-{{ ai_gen_id }} ai-hero-slider__media-desktop-{{ ai_gen_id }}"
                >
              {% else %}
                <div class="ai-hero-slider__placeholder-{{ ai_gen_id }} ai-hero-slider__media-desktop-{{ ai_gen_id }}">
                  {{ 'hero-apparel-1' | placeholder_svg_tag }}
                </div>
              {% endif %}

              {% if mobile_image != blank %}
                <img
                  src="{{ mobile_image | image_url: width: 1000 }}"
                  alt="{{ mobile_image.alt | escape }}"
                  loading="lazy"
                  width="{{ mobile_image.width }}"
                  height="{{ mobile_image.height }}"
                  class="ai-hero-slider__media-{{ ai_gen_id }} ai-hero-slider__media-mobile-{{ ai_gen_id }}"
                >
              {% elsif desktop_image != blank %}
                <img
                  src="{{ desktop_image | image_url: width: 1000 }}"
                  alt="{{ desktop_image.alt | escape }}"
                  loading="lazy"
                  width="{{ desktop_image.width }}"
                  height="{{ desktop_image.height }}"
                  class="ai-hero-slider__media-{{ ai_gen_id }} ai-hero-slider__media-mobile-{{ ai_gen_id }}"
                >
              {% else %}
                <div class="ai-hero-slider__placeholder-{{ ai_gen_id }} ai-hero-slider__media-mobile-{{ ai_gen_id }}">
                  {{ 'hero-apparel-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            {% endif %}

            <div class="ai-hero-slider__overlay-{{ ai_gen_id }}"></div>

            <div class="ai-hero-slider__content-{{ ai_gen_id }}">
              <div class="ai-hero-slider__content-inner-{{ ai_gen_id }}">
                {% if heading != blank %}
                  <h2 class="ai-hero-slider__heading-{{ ai_gen_id }}">{{ heading }}</h2>
                {% endif %}

                {% if subheading != blank %}
                  <p class="ai-hero-slider__subheading-{{ ai_gen_id }}">{{ subheading }}</p>
                {% endif %}

                {% if button_text != blank and button_link != blank %}
                  <a href="{{ button_link }}" class="ai-hero-slider__button-{{ ai_gen_id }}">
                    {{ button_text }}
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  {% if block.settings.show_arrows %}
    <div class="ai-hero-slider__arrows-{{ ai_gen_id }}">
      <button class="ai-hero-slider__arrow-{{ ai_gen_id }} ai-hero-slider__arrow-prev-{{ ai_gen_id }}" aria-label="Previous slide">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
        </svg>
      </button>
      <button class="ai-hero-slider__arrow-{{ ai_gen_id }} ai-hero-slider__arrow-next-{{ ai_gen_id }}" aria-label="Next slide">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
        </svg>
      </button>
    </div>
  {% endif %}

  {% if block.settings.show_dots %}
    <div class="ai-hero-slider__dots-{{ ai_gen_id }}"></div>
  {% endif %}
</hero-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class HeroSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.slides = [];
        this.autoplayInterval = null;
        this.touchStartX = 0;
        this.touchEndX = 0;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-hero-slider__track-{{ ai_gen_id }}');
        this.slides = Array.from(this.querySelectorAll('.ai-hero-slider__slide-{{ ai_gen_id }}'));
        this.prevButton = this.querySelector('.ai-hero-slider__arrow-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-hero-slider__arrow-next-{{ ai_gen_id }}');
        this.dotsContainer = this.querySelector('.ai-hero-slider__dots-{{ ai_gen_id }}');

        if (this.slides.length === 0) return;

        this.setupDots();
        this.setupEventListeners();
        this.updateSlide();

        {% if block.settings.autoplay %}
          this.startAutoplay();
        {% endif %}
      }

      setupDots() {
        if (!this.dotsContainer) return;

        this.slides.forEach((slide, index) => {
          const dot = document.createElement('button');
          dot.classList.add('ai-hero-slider__dot-{{ ai_gen_id }}');
          if (index === 0) dot.classList.add('active');
          dot.setAttribute('aria-label', 'Go to slide ' + (index + 1));
          dot.addEventListener('click', () => this.goToSlide(index));
          this.dotsContainer.appendChild(dot);
        });
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.prevSlide());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.nextSlide());
        }

        this.addEventListener('touchstart', (e) => {
          this.touchStartX = e.changedTouches[0].screenX;
        });

        this.addEventListener('touchend', (e) => {
          this.touchEndX = e.changedTouches[0].screenX;
          this.handleSwipe();
        });

        this.addEventListener('mouseenter', () => {
          {% if block.settings.pause_on_hover %}
            this.stopAutoplay();
          {% endif %}
        });

        this.addEventListener('mouseleave', () => {
          {% if block.settings.autoplay and block.settings.pause_on_hover %}
            this.startAutoplay();
          {% endif %}
        });
      }

      handleSwipe() {
        const swipeThreshold = 50;
        const diff = this.touchStartX - this.touchEndX;

        if (Math.abs(diff) > swipeThreshold) {
          if (diff > 0) {
            this.nextSlide();
          } else {
            this.prevSlide();
          }
        }
      }

      prevSlide() {
        this.currentSlide = this.currentSlide === 0 ? this.slides.length - 1 : this.currentSlide - 1;
        this.updateSlide();
        this.resetAutoplay();
      }

      nextSlide() {
        this.currentSlide = this.currentSlide === this.slides.length - 1 ? 0 : this.currentSlide + 1;
        this.updateSlide();
        this.resetAutoplay();
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateSlide();
        this.resetAutoplay();
      }

      updateSlide() {
        const offset = -this.currentSlide * 100;
        this.track.style.transform = 'translateX(' + offset + '%)';

        if (this.dotsContainer) {
          const dots = this.dotsContainer.querySelectorAll('.ai-hero-slider__dot-{{ ai_gen_id }}');
          dots.forEach((dot, index) => {
            if (index === this.currentSlide) {
              dot.classList.add('active');
            } else {
              dot.classList.remove('active');
            }
          });
        }
      }

      startAutoplay() {
        const interval = {{ block.settings.autoplay_speed | times: 1000 }};
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, interval);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      resetAutoplay() {
        {% if block.settings.autoplay %}
          this.stopAutoplay();
          this.startAutoplay();
        {% endif %}
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('hero-slider-{{ ai_gen_id }}', HeroSlider{{ ai_gen_id }});
  })();
</script>

