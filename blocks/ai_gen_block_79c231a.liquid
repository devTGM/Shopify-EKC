      margin-top: {% if block.settings.transparent_header %}-{{ block.settings.header_height_mobile }}px{% else %}0{% endif %};
    }

    .ai-hero-slider__viewport-{{ ai_gen_id }} {
      height: {% if block.settings.transparent_header %}calc({{ block.settings.mobile_height }}px + {{ block.settings.header_height_mobile }}px){% else %}{{ block.settings.mobile_height }}px{% endif %};
    }

    .ai-hero-slider__content-{{ ai_gen_id }} {
      top: {% if block.settings.transparent_header %}{{ block.settings.header_height_mobile }}px{% else %}0{% endif %};
      height: {% if block.settings.transparent_header %}calc(100% - {{ block.settings.header_height_mobile }}px){% else %}100%{% endif %};
      padding: {{ block.settings.content_padding_mobile }}px;
    }

    .ai-hero-slider__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.6 }}px;
    }

    .ai-hero-slider__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.8 }}px;
    }

