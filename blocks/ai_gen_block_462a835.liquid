<script>
  (function() {
    class PromoBanner{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.daysElement = this.querySelector('[data-days]');
        this.hoursElement = this.querySelector('[data-hours]');
        this.minutesElement = this.querySelector('[data-minutes]');
        this.secondsElement = this.querySelector('[data-seconds]');
        this.endDate = this.dataset.endDate;
        this.endTime = this.dataset.endTime;
        this.intervalId = null;
      }

      connectedCallback() {
        if (this.endDate && this.endTime) {
          this.startCountdown();
        }
      }

      disconnectedCallback() {
        if (this.intervalId) {
          clearInterval(this.intervalId);
        }
      }

      startCountdown() {
        const targetDateTime = new Date(this.endDate + 'T' + this.endTime).getTime();

        const updateTimer = () => {
          const now = new Date().getTime();
          const distance = targetDateTime - now;

          if (distance < 0) {
            if (this.intervalId) {
              clearInterval(this.intervalId);
            }
            this.daysElement.textContent = '00';
            this.hoursElement.textContent = '00';
            this.minutesElement.textContent = '00';
            this.secondsElement.textContent = '00';
            return;
          }

          const days = Math.floor(distance / (1000 * 60 * 60 * 24));
          const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
          const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
          const seconds = Math.floor((distance % (1000 * 60)) / 1000);

          this.daysElement.textContent = String(days).padStart(2, '0');
          this.hoursElement.textContent = String(hours).padStart(2, '0');
          this.minutesElement.textContent = String(minutes).padStart(2, '0');
          this.secondsElement.textContent = String(seconds).padStart(2, '0');
        };

        updateTimer();
        this.intervalId = setInterval(updateTimer, 1000);
      }
    }

    customElements.define('promo-banner-{{ ai_gen_id }}', PromoBanner{{ ai_gen_id }});
  })();
</script>

