    <div class="ai-collection-highlight__dots-{{ ai_gen_id }}" data-dots>
      {% for i in (1..4) %}
        <button 
          class="ai-collection-highlight__dot-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" 
