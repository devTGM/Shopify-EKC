{% doc %}
  @prompt
    Create a premium Shopify homepage product grid section titled “Must-Have Trends”.
    
    Desktop layout:
    
    Section header aligned left
    
    Optional “Shop all products” link aligned right
    
    Display 4 featured products in a clean grid
    
    Each product card includes:
    
    Product image
    
    Optional status badge (New, Sale, Bestseller)
    
    Product title
    
    Price (with compare-at price if on sale)
    
    Color or variant swatches
    
    Interactions:
    
    Subtle hover effect on product image (slight zoom or fade)
    
    Clickable product card
    
    Mobile optimization:
    
    2 products per row or horizontal swipe layout
    
    Badges visible without hover
    
    Touch-friendly spacing
    
    Design style:
    
    Minimal, luxury-focused
    
    Neutral background
    
    Clean typography using body font
    
    No heavy borders or shadows
    
    Ensure fast loading, accessibility, and responsive behavior.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-grid-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-grid-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-product-grid-header-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
    gap: 20px;
  }

  .ai-product-grid-title-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    font-weight: 400;
    letter-spacing: -0.02em;
  }

  .ai-product-grid-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: {{ block.settings.link_size }}px;
    transition: opacity 0.3s ease;
    white-space: nowrap;
  }

  .ai-product-grid-link-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-product-grid-items-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-product-card-{{ ai_gen_id }} {
    position: relative;
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .ai-product-card-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 125%;
    overflow: hidden;
    background-color: {{ block.settings.image_background }};
    margin-bottom: {{ block.settings.content_spacing }}px;
  }

  .ai-product-card-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .ai-product-card-{{ ai_gen_id }}:hover .ai-product-card-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-product-card-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    right: 12px;
    padding: 6px 12px;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    z-index: 2;
    border-radius: {{ block.settings.badge_radius }}px;
  }

  .ai-product-card-badge-new-{{ ai_gen_id }} {
    background-color: {{ block.settings.badge_new_bg }};
    color: {{ block.settings.badge_new_text }};
  }

  .ai-product-card-badge-sale-{{ ai_gen_id }} {
    background-color: {{ block.settings.badge_sale_bg }};
    color: {{ block.settings.badge_sale_text }};
  }

  .ai-product-card-badge-bestseller-{{ ai_gen_id }} {
    background-color: {{ block.settings.badge_bestseller_bg }};
    color: {{ block.settings.badge_bestseller_text }};
  }

  .ai-product-card-info-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-product-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0;
    font-weight: 400;
    line-height: 1.3;
  }

  .ai-product-card-price-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .ai-product-card-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 500;
  }

  .ai-product-card-compare-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.compare_price_color }};
    text-decoration: line-through;
    opacity: 0.6;
  }

  .ai-product-card-swatches-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .ai-product-card-swatch-{{ ai_gen_id }} {
    width: {{ block.settings.swatch_size }}px;
    height: {{ block.settings.swatch_size }}px;
    border-radius: 50%;
    border: 1px solid {{ block.settings.swatch_border_color }};
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .ai-product-card-swatch-{{ ai_gen_id }}:hover {
    transform: scale(1.1);
  }

  .ai-product-grid-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.title_color }};
    opacity: 0.6;
  }

  @media screen and (max-width: 989px) {
    .ai-product-grid-items-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-product-grid-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.7 }}px 0 {{ block.settings.section_padding_bottom | times: 0.7 }}px;
    }

    .ai-product-grid-header-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: flex-start;
      margin-bottom: {{ block.settings.header_spacing | times: 0.7 }}px;
    }

    .ai-product-grid-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.7 }}px;
    }

    .ai-product-grid-link-{{ ai_gen_id }} {
      font-size: {{ block.settings.link_size | times: 0.9 }}px;
    }

    .ai-product-grid-items-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.7 }}px;
    }

    .ai-product-card-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_title_size | times: 0.9 }}px;
    }

    .ai-product-card-price-{{ ai_gen_id }},
    .ai-product-card-compare-price-{{ ai_gen_id }} {
      font-size: {{ block.settings.price_size | times: 0.9 }}px;
    }

    .ai-product-card-badge-{{ ai_gen_id }} {
      font-size: 10px;
      padding: 5px 10px;
    }
  }
{% endstyle %}

<product-grid-{{ ai_gen_id }} class="ai-product-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-grid-container-{{ ai_gen_id }}">
    <div class="ai-product-grid-header-{{ ai_gen_id }}">
      {% if block.settings.section_title != blank %}
        <h2 class="ai-product-grid-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
      {% endif %}
      {% if block.settings.show_shop_all and block.settings.shop_all_link != blank %}
        <a href="{{ block.settings.shop_all_link }}" class="ai-product-grid-link-{{ ai_gen_id }}">
          {{ block.settings.shop_all_text }}
        </a>
      {% endif %}
    </div>

    {% if block.settings.product_1 != blank or block.settings.product_2 != blank or block.settings.product_3 != blank or block.settings.product_4 != blank %}
      <div class="ai-product-grid-items-{{ ai_gen_id }}">
        {% for i in (1..4) %}
          {% liquid
            assign product_key = 'product_' | append: i
            assign badge_key = 'product_' | append: i | append: '_badge'
            assign product = block.settings[product_key]
            assign badge_type = block.settings[badge_key]
          %}

          {% if product != blank %}
            <a href="{{ product.url }}" class="ai-product-card-{{ ai_gen_id }}">
              <div class="ai-product-card-image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 800 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-product-card-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="800"
                    height="1000"
                  >
                {% else %}
                  <div class="ai-product-card-image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                {% if badge_type != 'none' %}
                  <div class="ai-product-card-badge-{{ ai_gen_id }} ai-product-card-badge-{{ badge_type }}-{{ ai_gen_id }}">
                    {% if badge_type == 'new' %}
                      {{ block.settings.badge_new_label }}
                    {% elsif badge_type == 'sale' %}
                      {{ block.settings.badge_sale_label }}
                    {% elsif badge_type == 'bestseller' %}
                      {{ block.settings.badge_bestseller_label }}
                    {% endif %}
                  </div>
                {% endif %}
              </div>

              <div class="ai-product-card-info-{{ ai_gen_id }}">
                <h3 class="ai-product-card-title-{{ ai_gen_id }}">{{ product.title }}</h3>

                <div class="ai-product-card-price-wrapper-{{ ai_gen_id }}">
                  <span class="ai-product-card-price-{{ ai_gen_id }}">
                    {{ product.price | money }}
                  </span>
                  {% if product.compare_at_price > product.price %}
                    <span class="ai-product-card-compare-price-{{ ai_gen_id }}">
                      {{ product.compare_at_price | money }}
                    </span>
                  {% endif %}
                </div>

                {% if block.settings.show_swatches and product.options_with_values.size > 0 %}
                  {% for option in product.options_with_values %}
                    {% if option.name == 'Color' or option.name == 'Colour' %}
                      <div class="ai-product-card-swatches-{{ ai_gen_id }}">
                        {% for value in option.values limit: block.settings.max_swatches %}
                          {% assign color_value = value | downcase | replace: ' ', '-' %}
                          <div
                            class="ai-product-card-swatch-{{ ai_gen_id }}"
                            style="background-color: {{ color_value }};"
                            title="{{ value }}"
                          ></div>
                        {% endfor %}
                      </div>
                      {% break %}
                    {% endif %}
                  {% endfor %}
                {% endif %}
              </div>
            </a>
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-product-grid-empty-{{ ai_gen_id }}">
        <p>Select products to display in this grid</p>
      </div>
    {% endif %}
  </div>
</product-grid-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductGrid{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupAccessibility();
      }

      setupAccessibility() {
        const cards = this.querySelectorAll('.ai-product-card-{{ ai_gen_id }}');
        cards.forEach(card => {
          card.setAttribute('role', 'link');
        });
      }
    }

    customElements.define('product-grid-{{ ai_gen_id }}', ProductGrid{{ ai_gen_id }});
  })();
</script>

