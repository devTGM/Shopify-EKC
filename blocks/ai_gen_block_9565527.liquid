    }
  }
{% endstyle %}

<curated-selection-{{ ai_gen_id }} class="ai-curated-selection-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-curated-selection__container-{{ ai_gen_id }}">
    <div class="ai-curated-selection__grid-{{ ai_gen_id }}">
      <div class="ai-curated-selection__left-{{ ai_gen_id }}">
        {% if block.settings.section_label != blank %}
          <p class="ai-curated-selection__label-{{ ai_gen_id }}">{{ block.settings.section_label }}</p>
        {% endif %}
        
        <div class="ai-curated-selection__categories-{{ ai_gen_id }}">
          {% for i in (1..4) %}
            {% liquid
              assign category_name_key = 'category_' | append: i | append: '_name'
              assign category_name = block.settings[category_name_key]
            %}
            
            {% if category_name != blank %}
              <button 
                class="ai-curated-selection__category-{{ ai_gen_id }} {% if i == 1 %}active{% endif %}"
                data-category="{{ i }}"
                aria-label="View {{ category_name }}"
              >
                <span class="ai-curated-selection__category-number-{{ ai_gen_id }}">0{{ i }}</span>
                <span class="ai-curated-selection__category-name-{{ ai_gen_id }}">{{ category_name }}</span>
              </button>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <div class="ai-curated-selection__center-{{ ai_gen_id }}">
        {% for i in (1..4) %}
          {% liquid
            assign image_key = 'category_' | append: i | append: '_image'
            assign category_image = block.settings[image_key]
            assign category_name_key = 'category_' | append: i | append: '_name'
            assign category_name = block.settings[category_name_key]
          %}
          
          <div 
            class="ai-curated-selection__image-wrapper-{{ ai_gen_id }} {% if i == 1 %}active{% endif %}"
            data-image="{{ i }}"
          >
            {% if category_image %}
              <img
                src="{{ category_image | image_url: width: 1200 }}"
                alt="{{ category_name | escape }}"
                loading="lazy"
                width="{{ category_image.width }}"
                height="{{ category_image.height }}"
                class="ai-curated-selection__image-{{ ai_gen_id }}"
              >
            {% else %}
              <div class="ai-curated-selection__image-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>

      <div class="ai-curated-selection__right-{{ ai_gen_id }}">
        <div class="ai-curated-selection__content-wrapper-{{ ai_gen_id }}">
          {% for i in (1..4) %}
            {% liquid
              assign headline_key = 'category_' | append: i | append: '_headline'
              assign description_key = 'category_' | append: i | append: '_description'
              assign cta_text_key = 'category_' | append: i | append: '_cta_text'
              assign cta_link_key = 'category_' | append: i | append: '_cta_link'
              
              assign headline = block.settings[headline_key]
              assign description = block.settings[description_key]
              assign cta_text = block.settings[cta_text_key]
              assign cta_link = block.settings[cta_link_key]
            %}
            
            <div 
              class="ai-curated-selection__content-item-{{ ai_gen_id }} {% if i == 1 %}active{% endif %}"
              data-content="{{ i }}"
            >
              {% if headline != blank %}
                <h2 class="ai-curated-selection__headline-{{ ai_gen_id }}">{{ headline }}</h2>
              {% endif %}
              
              {% if description != blank %}
                <div class="ai-curated-selection__description-{{ ai_gen_id }}">{{ description }}</div>
              {% endif %}
              
              {% if cta_text != blank and cta_link != blank %}
                <a href="{{ cta_link }}" class="ai-curated-selection__cta-{{ ai_gen_id }}">
                  {{ cta_text }}
                </a>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</curated-selection-{{ ai_gen_id }}>

<script>
  (function() {
    class CuratedSelection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.categoryButtons = this.querySelectorAll('.ai-curated-selection__category-{{ ai_gen_id }}');
        this.imageWrappers = this.querySelectorAll('.ai-curated-selection__image-wrapper-{{ ai_gen_id }}');
        this.contentItems = this.querySelectorAll('.ai-curated-selection__content-item-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.categoryButtons.forEach((button) => {
          button.addEventListener('mouseenter', () => {
            const categoryId = button.getAttribute('data-category');
            this.switchCategory(categoryId);
          });
          
          button.addEventListener('click', () => {
            const categoryId = button.getAttribute('data-category');
            this.switchCategory(categoryId);
          });
        });
      }

      switchCategory(categoryId) {
        this.categoryButtons.forEach((btn) => {
          if (btn.getAttribute('data-category') === categoryId) {
            btn.classList.add('active');
          } else {
            btn.classList.remove('active');
          }
        });

        this.imageWrappers.forEach((wrapper) => {
          if (wrapper.getAttribute('data-image') === categoryId) {
            wrapper.classList.add('active');
          } else {
            wrapper.classList.remove('active');
          }
        });

        this.contentItems.forEach((item) => {
          if (item.getAttribute('data-content') === categoryId) {
            item.classList.add('active');
          } else {
            item.classList.remove('active');
          }
        });
      }
    }

    customElements.define('curated-selection-{{ ai_gen_id }}', CuratedSelection{{ ai_gen_id }});
  })();
</script>

