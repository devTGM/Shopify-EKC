<script>
  (function() {
    class TestimonialCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('.ai-testimonial-carousel__track-{{ ai_gen_id }}');
        this.cards = this.querySelectorAll('.ai-testimonial-carousel__card-{{ ai_gen_id }}');
        this.speed = parseFloat(this.dataset.speed) || 30;
        this.pauseOnHover = this.dataset.pauseOnHover === 'true';
        this.videoVolume = parseFloat(this.dataset.videoVolume) || 0.5;
        this.animationId = null;
        this.currentPosition = 0;
        this.isPaused = false;
        this.isMobile = window.innerWidth < 750;
        this.touchStartX = 0;
        this.touchEndX = 0;
      }

      connectedCallback() {
        if (this.cards.length === 0) return;

        this.setupCarousel();
        this.startAnimation();
        this.setupEventListeners();
        this.setupVideoControls();
      }

      setupCarousel() {
        const firstCard = this.cards[0];
        const cardWidth = firstCard.offsetWidth;
        const gap = parseInt(getComputedStyle(this.track).gap) || 0;
        this.cardTotalWidth = cardWidth + gap;
        this.totalWidth = this.cardTotalWidth * (this.cards.length / 2);
      }

      startAnimation() {
        const animate = () => {
          if (!this.isPaused) {
            this.currentPosition -= this.speed / 60;

            if (Math.abs(this.currentPosition) >= this.totalWidth) {
              this.currentPosition = 0;
            }

            this.track.style.transform = `translateX(${this.currentPosition}px)`;
          }

          this.animationId = requestAnimationFrame(animate);
        };

        this.animationId = requestAnimationFrame(animate);
      }

      setupVideoControls() {
        const volumeButtons = this.querySelectorAll('[data-volume-toggle]');
        
        volumeButtons.forEach((button) => {
          const mediaContainer = button.closest('.ai-testimonial-carousel__media-{{ ai_gen_id }}');
          const video = mediaContainer.querySelector('[data-video-element]');
          
          if (!video) return;

          const mutedIcon = button.querySelector('.volume-muted');
          const onIcon = button.querySelector('.volume-on');

          button.addEventListener('click', (e) => {
            e.preventDefault();
            e.stopPropagation();

            if (video.muted) {
              video.muted = false;
              video.volume = this.videoVolume;
              mutedIcon.style.display = 'none';
              onIcon.style.display = 'block';
              button.setAttribute('aria-label', 'Mute video');
            } else {
              video.muted = true;
              mutedIcon.style.display = 'block';
              onIcon.style.display = 'none';
              button.setAttribute('aria-label', 'Unmute video');
            }
          });
        });
      }

      setupEventListeners() {
        if (this.pauseOnHover && !this.isMobile) {
          this.track.addEventListener('mouseenter', () => {
            this.isPaused = true;
          });

          this.track.addEventListener('mouseleave', () => {
            this.isPaused = false;
          });
        }

        if (this.isMobile) {
          this.track.addEventListener('touchstart', (e) => {
            this.touchStartX = e.changedTouches[0].screenX;
            this.isPaused = true;
          }, { passive: true });

          this.track.addEventListener('touchmove', (e) => {
            this.touchEndX = e.changedTouches[0].screenX;
            const diff = this.touchStartX - this.touchEndX;
            this.currentPosition -= diff * 0.5;
            this.touchStartX = this.touchEndX;
          }, { passive: true });

          this.track.addEventListener('touchend', () => {
            this.isPaused = false;
          }, { passive: true });
        }

        window.addEventListener('resize', () => {
          this.isMobile = window.innerWidth < 750;
          this.setupCarousel();
        });
      }

      disconnectedCallback() {
        if (this.animationId) {
          cancelAnimationFrame(this.animationId);
        }
      }
    }

    customElements.define('testimonial-carousel-{{ ai_gen_id }}', TestimonialCarousel{{ ai_gen_id }});
  })();
</script>

