    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    overflow: hidden;
    display: block;
  }

  .ai-testimonial-carousel__header-{{ ai_gen_id }} {
    text-align: center;
    margin: 0 auto {{ block.settings.header_spacing }}px;
    max-width: 800px;
    padding: 0 20px;
  }

  .ai-testimonial-carousel__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.subheading_spacing }}px;
    font-family: var(--font-heading-family);
    font-weight: 400;
    line-height: 1.2;
  }

  .ai-testimonial-carousel__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
    font-family: var(--font-body-family);
    line-height: 1.5;
  }

  .ai-testimonial-carousel__track-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-testimonial-carousel__track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    will-change: transform;
  }

  .ai-testimonial-carousel__track-{{ ai_gen_id }}.paused {
    animation-play-state: paused;
  }

  .ai-testimonial-carousel__card-{{ ai_gen_id }} {
    flex: 0 0 auto;
    width: {{ block.settings.card_width_mobile }}px;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    {% if block.settings.card_shadow %}
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    {% endif %}
  }

  .ai-testimonial-carousel__media-{{ ai_gen_id }} {
    width: 100%;
    {% if block.settings.media_aspect_ratio == 'custom' %}
      height: {{ block.settings.media_height }}px;
    {% else %}
      aspect-ratio: {{ block.settings.media_aspect_ratio }};
    {% endif %}
    overflow: hidden;
    position: relative;
    background-color: #f5f5f5;
    border-radius: {{ block.settings.media_border_radius }}px;
  }

