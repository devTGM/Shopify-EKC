{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-slider-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: block;
  }

  .ai-hero-slider__viewport-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.desktop_height }}px;
    overflow: hidden;
  }

  .ai-hero-slider__track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
    height: 100%;
  }

  .ai-hero-slider__slide-{{ ai_gen_id }} {
    min-width: 100%;
    height: 100%;
    position: relative;
    flex-shrink: 0;
  }

  .ai-hero-slider__link-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    height: 100%;
    position: relative;
    text-decoration: none;
    color: inherit;
  }

  .ai-hero-slider__media-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-hero-slider__content-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.content_vertical_alignment }};
    align-items: {{ block.settings.content_horizontal_alignment }};
    padding: {{ block.settings.content_padding_desktop }}px;
    text-align: {{ block.settings.text_alignment }};
    z-index: 1;
  }

  .ai-hero-slider__heading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0 0 16px 0;
    font-size: {{ block.settings.heading_size }}px;
    max-width: 800px;
  }

  .ai-hero-slider__subheading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0;
    font-size: {{ block.settings.subheading_size }}px;
    max-width: 600px;
  }

  .ai-hero-slider__controls-{{ ai_gen_id }} {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
    z-index: 2;
  }

  .ai-hero-slider__dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    opacity: 0.5;
    border: none;
    cursor: pointer;
    transition: opacity 0.3s ease;
    padding: 0;
  }

  .ai-hero-slider__dot-{{ ai_gen_id }}.active {
    opacity: 1;
  }

  .ai-hero-slider__arrow-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.arrow_background }};
    color: {{ block.settings.arrow_color }};
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    transition: opacity 0.3s ease;
    opacity: 0.8;
  }

  .ai-hero-slider__arrow-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  .ai-hero-slider__arrow-{{ ai_gen_id }}--prev {
    left: 20px;
  }

  .ai-hero-slider__arrow-{{ ai_gen_id }}--next {
    right: 20px;
  }

  .ai-hero-slider__arrow-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  @media screen and (min-width: 990px) {
    .ai-hero-slider__media-{{ ai_gen_id }}.tablet-only,
    .ai-hero-slider__media-{{ ai_gen_id }}.mobile-only {
      display: none;
    }

    .ai-hero-slider__media-{{ ai_gen_id }}.desktop-only {
