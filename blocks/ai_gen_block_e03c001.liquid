<script>
  (function() {
    class TestimonialCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('.ai-testimonial-carousel__track-{{ ai_gen_id }}');
        this.cards = Array.from(this.querySelectorAll('.ai-testimonial-carousel__card-{{ ai_gen_id }}'));
        this.speed = parseFloat(this.dataset.speed) || 30;
        this.animationId = null;
        this.currentPosition = 0;
        this.isPaused = false;
        this.touchStartX = 0;
        this.touchEndX = 0;
      }

      connectedCallback() {
        this.setupCarousel();
        this.setupEventListeners();
        this.startAutoScroll();
      }

      disconnectedCallback() {
        this.stopAutoScroll();
      }

      setupCarousel() {
        if (this.cards.length === 0) return;

        const firstCard = this.cards[0];
        const cardWidth = firstCard.offsetWidth;
        const gap = parseInt(getComputedStyle(this.track).gap) || 0;
        this.cardTotalWidth = cardWidth + gap;
        this.totalWidth = this.cardTotalWidth * (this.cards.length / 2);
      }

      setupEventListeners() {
        this.track.addEventListener('mouseenter', () => {
          if (window.innerWidth >= 750) {
            this.pauseScroll();
          }
        });

        this.track.addEventListener('mouseleave', () => {
          if (window.innerWidth >= 750) {
            this.resumeScroll();
          }
        });

        this.track.addEventListener('touchstart', (e) => {
          this.touchStartX = e.touches[0].clientX;
          this.pauseScroll();
        }, { passive: true });

        this.track.addEventListener('touchmove', (e) => {
          this.touchEndX = e.touches[0].clientX;
          const diff = this.touchStartX - this.touchEndX;
          this.currentPosition += diff;
          this.touchStartX = this.touchEndX;
          this.updatePosition();
        }, { passive: true });

        this.track.addEventListener('touchend', () => {
          this.resumeScroll();
        });

        window.addEventListener('resize', () => {
          this.setupCarousel();
        });
      }

      startAutoScroll() {
        const animate = () => {
          if (!this.isPaused) {
            this.currentPosition += this.speed / 60;

            if (this.currentPosition >= this.totalWidth) {
              this.currentPosition = 0;
            }

            this.updatePosition();
          }
          this.animationId = requestAnimationFrame(animate);
        };
        this.animationId = requestAnimationFrame(animate);
      }

      stopAutoScroll() {
        if (this.animationId) {
          cancelAnimationFrame(this.animationId);
        }
      }

      pauseScroll() {
        this.isPaused = true;
        this.track.classList.add('paused');
      }

      resumeScroll() {
        this.isPaused = false;
        this.track.classList.remove('paused');
      }

      updatePosition() {
        this.track.style.transform = `translateX(-${this.currentPosition}px)`;
      }
    }

    customElements.define('testimonial-carousel-{{ ai_gen_id }}', TestimonialCarousel{{ ai_gen_id }});
  })();
</script>

