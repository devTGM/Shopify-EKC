{% doc %}
  @prompt
    Create a premium testimonial carousel section for a Shopify homepage.
    
    The section should feature:
    
    A centered headline and short subheading at the top
    
    A horizontally scrolling carousel of customer testimonials
    
    Each testimonial card includes:
    
    Customer lifestyle image
    
    Short quote (1–2 lines max)
    
    Customer name
    
    Linked product name
    
    Carousel behavior:
    
    Auto-scrolls smoothly from right to left
    
    Infinite loop
    
    Pauses on hover (desktop)
    
    Swipeable on mobile
    
    Shows 3–4 cards on desktop, 1 card on mobile
    
    Design style:
    
    Minimal, luxury aesthetic
    
    White or soft neutral background
    
    Clean typography using body font
    
    No heavy borders
    
    Soft shadows or none
    
    Ensure the section is fully responsive, fast-loading, and accessible.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-testimonial-carousel-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    overflow: hidden;
  }

  .ai-testimonial-carousel__header-{{ ai_gen_id }} {
    text-align: center;
    margin: 0 auto {{ block.settings.header_spacing }}px;
    max-width: 800px;
    padding: 0 20px;
  }

  .ai-testimonial-carousel__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.subheading_spacing }}px;
    font-weight: 400;
    letter-spacing: -0.02em;
  }

  .ai-testimonial-carousel__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-testimonial-carousel__track-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-testimonial-carousel__track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    will-change: transform;
  }

  .ai-testimonial-carousel__track-{{ ai_gen_id }}.paused {
    animation-play-state: paused;
  }

  .ai-testimonial-carousel__card-{{ ai_gen_id }} {
    flex: 0 0 auto;
    width: {{ block.settings.card_width_desktop }}px;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    {% if block.settings.card_shadow %}
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    {% endif %}
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.card_content_gap }}px;
  }

  .ai-testimonial-carousel__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    background-color: #f5f5f5;
  }

  .ai-testimonial-carousel__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-testimonial-carousel__image-wrapper-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-testimonial-carousel__quote-{{ ai_gen_id }} {
    font-size: {{ block.settings.quote_size }}px;
    color: {{ block.settings.quote_color }};
    line-height: 1.5;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .ai-testimonial-carousel__customer-{{ ai_gen_id }} {
    font-size: {{ block.settings.customer_name_size }}px;
    color: {{ block.settings.customer_name_color }};
    margin: 0;
    font-weight: 500;
  }

  .ai-testimonial-carousel__product-link-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_link_size }}px;
    color: {{ block.settings.product_link_color }};
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .ai-testimonial-carousel__product-link-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  @media screen and (max-width: 749px) {
    .ai-testimonial-carousel__card-{{ ai_gen_id }} {
      width: {{ block.settings.card_width_mobile }}px;
    }

    .ai-testimonial-carousel__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-testimonial-carousel__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<testimonial-carousel-{{ ai_gen_id }}
  class="ai-testimonial-carousel-{{ ai_gen_id }}"
  data-speed="{{ block.settings.scroll_speed }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.heading != blank or block.settings.subheading != blank %}
    <div class="ai-testimonial-carousel__header-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-testimonial-carousel__heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}
      {% if block.settings.subheading != blank %}
        <div class="ai-testimonial-carousel__subheading-{{ ai_gen_id }}">
          {{ block.settings.subheading }}
        </div>
      {% endif %}
