<hero-slider-{{ ai_gen_id }}
  class="ai-hero-slider-{{ ai_gen_id }} {% if block.settings.transparent_header %}transparent-header{% endif %}"
  data-autoplay="{{ block.settings.autoplay }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-hero-slider__wrapper-{{ ai_gen_id }}">
    <div class="ai-hero-slider__track-{{ ai_gen_id }}">
      {% for i in (1..8) %}
        {% liquid
          assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
          assign slide_image_desktop_key = 'slide_' | append: i | append: '_image_desktop'
          assign slide_image_mobile_key = 'slide_' | append: i | append: '_image_mobile'
          assign slide_video_desktop_key = 'slide_' | append: i | append: '_video_desktop'
          assign slide_video_mobile_key = 'slide_' | append: i | append: '_video_mobile'
          assign slide_heading_key = 'slide_' | append: i | append: '_heading'
          assign slide_subheading_key = 'slide_' | append: i | append: '_subheading'
          assign slide_button_text_key = 'slide_' | append: i | append: '_button_text'
          assign slide_button_link_key = 'slide_' | append: i | append: '_button_link'

          assign slide_enabled = block.settings[slide_enabled_key]
          assign slide_image_desktop = block.settings[slide_image_desktop_key]
          assign slide_image_mobile = block.settings[slide_image_mobile_key]
          assign slide_video_desktop = block.settings[slide_video_desktop_key]
          assign slide_video_mobile = block.settings[slide_video_mobile_key]
          assign slide_heading = block.settings[slide_heading_key]
          assign slide_subheading = block.settings[slide_subheading_key]
          assign slide_button_text = block.settings[slide_button_text_key]
          assign slide_button_link = block.settings[slide_button_link_key]
        %}

        {% if slide_enabled %}
          <div class="ai-hero-slider__slide-{{ ai_gen_id }}" data-slide="{{ i }}">
            <div class="ai-hero-slider__media-{{ ai_gen_id }} ai-hero-slider__media--desktop-{{ ai_gen_id }}">
              {% if slide_video_desktop != blank %}
                <video
                  autoplay
                  muted
                  loop
                  playsinline
                  src="{{ slide_video_desktop }}"
                ></video>
              {% elsif slide_image_desktop != blank %}
                <img
                  src="{{ slide_image_desktop | image_url: width: 2000 }}"
                  alt="{{ slide_image_desktop.alt | escape }}"
                  loading="lazy"
                  width="{{ slide_image_desktop.width }}"
                  height="{{ slide_image_desktop.height }}"
                >
              {% else %}
                <div class="ai-hero-slider__placeholder-{{ ai_gen_id }}">
                  {{ 'hero-apparel-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-hero-slider__media-{{ ai_gen_id }} ai-hero-slider__media--mobile-{{ ai_gen_id }}">
              {% if slide_video_mobile != blank %}
                <video
                  autoplay
                  muted
                  loop
                  playsinline
                  src="{{ slide_video_mobile }}"
                ></video>
              {% elsif slide_image_mobile != blank %}
                <img
                  src="{{ slide_image_mobile | image_url: width: 1000 }}"
                  alt="{{ slide_image_mobile.alt | escape }}"
                  loading="lazy"
                  width="{{ slide_image_mobile.width }}"
                  height="{{ slide_image_mobile.height }}"
                >
              {% elsif slide_video_desktop != blank %}
                <video
                  autoplay
                  muted
                  loop
                  playsinline
                  src="{{ slide_video_desktop }}"
                ></video>
              {% elsif slide_image_desktop != blank %}
                <img
                  src="{{ slide_image_desktop | image_url: width: 1000 }}"
                  alt="{{ slide_image_desktop.alt | escape }}"
                  loading="lazy"
                  width="{{ slide_image_desktop.width }}"
                  height="{{ slide_image_desktop.height }}"
                >
              {% else %}
                <div class="ai-hero-slider__placeholder-{{ ai_gen_id }}">
                  {{ 'hero-apparel-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-hero-slider__overlay-{{ ai_gen_id }}"></div>

            <div class="ai-hero-slider__content-{{ ai_gen_id }}">
              {% if slide_heading != blank %}
                <h2 class="ai-hero-slider__heading-{{ ai_gen_id }}">{{ slide_heading }}</h2>
              {% endif %}

              {% if slide_subheading != blank %}
                <p class="ai-hero-slider__subheading-{{ ai_gen_id }}">{{ slide_subheading }}</p>
              {% endif %}

              {% if slide_button_text != blank %}
                <a
                  href="{{ slide_button_link }}"
                  class="ai-hero-slider__button-{{ ai_gen_id }}"
                >
                  {{ slide_button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <div class="ai-hero-slider__arrows-{{ ai_gen_id }}">
