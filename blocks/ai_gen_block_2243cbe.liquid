<luxury-category-cards-{{ ai_gen_id }} class="ai-category-cards-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-category-cards__container-{{ ai_gen_id }}">
    <div class="ai-category-cards__carousel-wrapper-{{ ai_gen_id }}">
      <div class="ai-category-cards__carousel-{{ ai_gen_id }}" data-carousel>
        {% for i in (1..6) %}
          {% liquid
            assign collection_key = 'collection_' | append: i
            assign collection = block.settings[collection_key]
          %}

          {% if collection != blank %}
            <a href="{{ collection.url }}" class="ai-category-card-{{ ai_gen_id }}" data-card data-index="{{ forloop.index0 }}">
              <div class="ai-category-card__image-wrapper-{{ ai_gen_id }}">
                {% if collection.featured_image %}
                  <img
                    src="{{ collection.featured_image | image_url: width: 800 }}"
                    alt="{{ collection.featured_image.alt | default: collection.title | escape }}"
                    loading="lazy"
                    width="800"
                    height="{{ 800 | times: block.settings.image_aspect_ratio | divided_by: 100 }}"
                    class="ai-category-card__image-{{ ai_gen_id }}"
                  >
                {% else %}
                  <div class="ai-category-card__image-placeholder-{{ ai_gen_id }}">
                    {{ 'collection-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
              <div class="ai-category-card__content-{{ ai_gen_id }}">
                <h3 class="ai-category-card__title-{{ ai_gen_id }}">{{ collection.title }}</h3>
                <div class="ai-category-card__arrow-{{ ai_gen_id }}">
                  <svg class="ai-category-card__arrow-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
              </div>
            </a>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    {% if block.settings.show_navigation %}
      <div class="ai-category-cards__nav-{{ ai_gen_id }}" data-nav>
        <button class="ai-category-cards__nav-button-{{ ai_gen_id }}" data-prev aria-label="Previous">
          <svg class="ai-category-cards__nav-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M15 18L9 12L15 6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button class="ai-category-cards__nav-button-{{ ai_gen_id }}" data-next aria-label="Next">
          <svg class="ai-category-cards__nav-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 18L15 12L9 6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
    {% endif %}

    {% if block.settings.show_dots %}
      <div class="ai-category-cards__dots-{{ ai_gen_id }}" data-dots></div>
    {% endif %}
  </div>
</luxury-category-cards-{{ ai_gen_id }}>

<script>
  (function() {
    class LuxuryCategoryCards{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.carousel = null;
        this.prevButton = null;
        this.nextButton = null;
        this.dotsContainer = null;
        this.navContainer = null;
        this.cards = [];
        this.currentIndex = 0;
        this.itemsPerView = 1;
        this.hasAnimated = false;
      }

      connectedCallback() {
        this.carousel = this.querySelector('[data-carousel]');
        this.prevButton = this.querySelector('[data-prev]');
        this.nextButton = this.querySelector('[data-next]');
        this.dotsContainer = this.querySelector('[data-dots]');
        this.navContainer = this.querySelector('[data-nav]');
        this.cards = Array.from(this.querySelectorAll('[data-card]'));

        if (!this.carousel || this.cards.length === 0) return;

        this.calculateItemsPerView();
        this.setupNavigation();
        this.setupDots();
        this.updateNavigation();
        this.setupLoadAnimation();

        window.addEventListener('resize', () => {
          this.calculateItemsPerView();
          this.setupDots();
          this.updateNavigation();
        });

        this.carousel.addEventListener('scroll', () => {
          this.updateCurrentIndex();
          this.updateNavigation();
        });
      }

      setupLoadAnimation() {
        const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
        
        if (prefersReducedMotion) {
          this.cards.forEach(card => card.classList.add('animate-in'));
          if (this.navContainer) this.navContainer.classList.add('animate-in');
          if (this.dotsContainer) this.dotsContainer.classList.add('animate-in');
          return;
        }

        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting && !this.hasAnimated) {
              this.hasAnimated = true;
              this.animateCards();
              observer.disconnect();
            }
          });
        }, {
          threshold: 0.1
        });

        observer.observe(this);
      }

      animateCards() {
        this.cards.forEach((card, index) => {
          setTimeout(() => {
            card.style.transition = `opacity 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94) ${index * 0.1}s, transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94) ${index * 0.1}s`;
            card.classList.add('animate-in');
          }, 50);
        });

        if (this.navContainer) {
          setTimeout(() => {
            this.navContainer.classList.add('animate-in');
          }, this.cards.length * 100 + 200);
        }

        if (this.dotsContainer) {
          setTimeout(() => {
            this.dotsContainer.classList.add('animate-in');
          }, this.cards.length * 100 + 300);
        }
      }

      calculateItemsPerView() {
        const width = window.innerWidth;
        if (width <= 749) {
          this.itemsPerView = {{ block.settings.columns_mobile }};
        } else if (width <= 989) {
          this.itemsPerView = 2;
        } else {
          this.itemsPerView = {{ block.settings.columns_desktop }};
        }
      }

      setupNavigation() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.scrollPrev());
        }
        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.scrollNext());
        }
      }

      setupDots() {
        if (!this.dotsContainer) return;

        this.dotsContainer.innerHTML = '';
        const totalPages = Math.ceil(this.cards.length / this.itemsPerView);

        for (let i = 0; i < totalPages; i++) {
          const dot = document.createElement('button');
          dot.className = 'ai-category-cards__dot-{{ ai_gen_id }}';
          dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
          if (i === 0) dot.classList.add('active');
          
          dot.addEventListener('click', () => {
            const scrollAmount = this.cards[i * this.itemsPerView].offsetLeft - this.carousel.offsetLeft;
            this.carousel.scrollTo({
              left: scrollAmount,
              behavior: 'smooth'
            });
          });

          this.dotsContainer.appendChild(dot);
        }
      }

      updateCurrentIndex() {
        const scrollLeft = this.carousel.scrollLeft;
        const cardWidth = this.cards[0].offsetWidth;
        const gap = {{ block.settings.grid_gap }};
        this.currentIndex = Math.round(scrollLeft / (cardWidth + gap));
        this.updateDots();
      }

      updateDots() {
        if (!this.dotsContainer) return;

        const dots = this.dotsContainer.querySelectorAll('.ai-category-cards__dot-{{ ai_gen_id }}');
        const currentPage = Math.floor(this.currentIndex / this.itemsPerView);

        dots.forEach((dot, index) => {
          if (index === currentPage) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }

      scrollPrev() {
        const cardWidth = this.cards[0].offsetWidth;
        const gap = {{ block.settings.grid_gap }};
        const scrollAmount = (cardWidth + gap) * this.itemsPerView;
        
        this.carousel.scrollBy({
          left: -scrollAmount,
          behavior: 'smooth'
        });
      }

      scrollNext() {
        const cardWidth = this.cards[0].offsetWidth;
        const gap = {{ block.settings.grid_gap }};
        const scrollAmount = (cardWidth + gap) * this.itemsPerView;
        
        this.carousel.scrollBy({
          left: scrollAmount,
          behavior: 'smooth'
        });
      }

      updateNavigation() {
        if (!this.prevButton || !this.nextButton) return;

        const scrollLeft = this.carousel.scrollLeft;
        const maxScroll = this.carousel.scrollWidth - this.carousel.clientWidth;

        this.prevButton.disabled = scrollLeft <= 0;
        this.nextButton.disabled = scrollLeft >= maxScroll - 1;
      }
    }

    customElements.define('luxury-category-cards-{{ ai_gen_id }}', LuxuryCategoryCards{{ ai_gen_id }});
  })();
</script>

