  }

  .ai-category-cards__nav-button-{{ ai_gen_id }}:disabled .ai-category-cards__nav-icon-{{ ai_gen_id }} {
    stroke: {{ block.settings.arrow_color }};
  }

  .ai-category-cards__dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    justify-content: center;
    margin-top: 20px;
    opacity: 0;
    transform: translateY(20px);
  }

