    cursor: not-allowed;
  }

  .ai-category-cards__nav-button-{{ ai_gen_id }}:disabled:hover {
    border-color: {{ block.settings.arrow_color }};
    background-color: {{ block.settings.card_background }};
  }

  .ai-category-cards__nav-icon-{{ ai_gen_id }} {
