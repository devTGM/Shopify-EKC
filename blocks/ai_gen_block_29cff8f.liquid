{% doc %}
  @prompt
    An Image with text section which has option to keep the image either on left or right, can control image aspect ratio.
    
    It should be fully optimised for mobile and desktop, This section should have text alignment option on both mobile and desktop view
    
    It must have load up animation. Also it must have scroll animation as well
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-text-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    overflow: hidden;
  }

  .ai-image-text-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: {% if block.settings.image_position == 'left' %}1fr 1fr{% else %}1fr 1fr{% endif %};
    gap: {{ block.settings.gap }}px;
    align-items: center;
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
  }

  .ai-image-text-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    order: {% if block.settings.image_position == 'left' %}1{% else %}2{% endif %};
    opacity: 0;
    transform: translateY(30px);
  }

  .ai-image-text-image-wrapper-{{ ai_gen_id }}.ai-loaded-{{ ai_gen_id }} {
    animation: ai-fadeInUp-{{ ai_gen_id }} {{ block.settings.load_animation_duration }}s ease-out forwards;
  }

  .ai-image-text-image-wrapper-{{ ai_gen_id }}.ai-scroll-visible-{{ ai_gen_id }} {
    animation: ai-scrollFadeIn-{{ ai_gen_id }} {{ block.settings.scroll_animation_duration }}s ease-out forwards;
  }

  .ai-image-text-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    display: block;
  }

  .ai-image-text-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-image-text-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-image-text-content-{{ ai_gen_id }} {
    order: {% if block.settings.image_position == 'left' %}2{% else %}1{% endif %};
    text-align: {{ block.settings.text_alignment_desktop }};
    opacity: 0;
    transform: translateY(30px);
  }

  .ai-image-text-content-{{ ai_gen_id }}.ai-loaded-{{ ai_gen_id }} {
    animation: ai-fadeInUp-{{ ai_gen_id }} {{ block.settings.load_animation_duration }}s ease-out {{ block.settings.load_animation_delay }}s forwards;
  }

  .ai-image-text-content-{{ ai_gen_id }}.ai-scroll-visible-{{ ai_gen_id }} {
    animation: ai-scrollFadeIn-{{ ai_gen_id }} {{ block.settings.scroll_animation_duration }}s ease-out {{ block.settings.scroll_animation_delay }}s forwards;
  }

  .ai-image-text-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    line-height: 1.2;
  }

  .ai-image-text-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0;
  }

  .ai-image-text-button-wrapper-{{ ai_gen_id }} {
    margin-top: {{ block.settings.button_spacing }}px;
  }

  .ai-image-text-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    transition: all 0.3s ease;
  }

  .ai-image-text-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
  }

  @keyframes ai-fadeInUp-{{ ai_gen_id }} {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes ai-scrollFadeIn-{{ ai_gen_id }} {
    from {
      opacity: 0;
      transform: translateY(50px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-image-text-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.gap_mobile }}px;
    }

    .ai-image-text-image-wrapper-{{ ai_gen_id }} {
      order: {% if block.settings.image_position_mobile == 'top' %}1{% else %}2{% endif %};
    }

    .ai-image-text-content-{{ ai_gen_id }} {
      order: {% if block.settings.image_position_mobile == 'top' %}2{% else %}1{% endif %};
      text-align: {{ block.settings.text_alignment_mobile }};
    }

    .ai-image-text-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
    }

    .ai-image-text-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size_mobile }}px;
    }

    .ai-image-text-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_text_size_mobile }}px;
    }
  }
{% endstyle %}

<ai-image-text-{{ ai_gen_id }} class="ai-image-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-text-container-{{ ai_gen_id }}">
    <div class="ai-image-text-image-wrapper-{{ ai_gen_id }}" data-animate="image">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 2000 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="ai-image-text-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-image-text-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>

    <div class="ai-image-text-content-{{ ai_gen_id }}" data-animate="content">
      {% if block.settings.heading != blank %}
        <h2 class="ai-image-text-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}

      {% if block.settings.text != blank %}
        <div class="ai-image-text-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
      {% endif %}

      {% if block.settings.button_text != blank and block.settings.button_link != blank %}
        <div class="ai-image-text-button-wrapper-{{ ai_gen_id }}">
          <a href="{{ block.settings.button_link }}" class="ai-image-text-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</ai-image-text-{{ ai_gen_id }}>

<script>
  (function() {
    class AiImageText{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.imageWrapper = null;
        this.contentWrapper = null;
        this.observer = null;
        this.hasLoadAnimated = false;
        this.hasScrollAnimated = false;
      }

      connectedCallback() {
        this.imageWrapper = this.querySelector('[data-animate="image"]');
        this.contentWrapper = this.querySelector('[data-animate="content"]');
        
        this.initLoadAnimation();
        this.initScrollAnimation();
      }

      initLoadAnimation() {
        setTimeout(() => {
          if (this.imageWrapper) {
            this.imageWrapper.classList.add('ai-loaded-{{ ai_gen_id }}');
          }
          if (this.contentWrapper) {
            this.contentWrapper.classList.add('ai-loaded-{{ ai_gen_id }}');
          }
          this.hasLoadAnimated = true;
        }, 100);
      }

      initScrollAnimation() {
        const options = {
          root: null,
          rootMargin: '0px',
          threshold: 0.2
        };

        this.observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting && !this.hasScrollAnimated) {
              if (this.imageWrapper) {
                this.imageWrapper.classList.remove('ai-loaded-{{ ai_gen_id }}');
                this.imageWrapper.classList.add('ai-scroll-visible-{{ ai_gen_id }}');
              }
              if (this.contentWrapper) {
                this.contentWrapper.classList.remove('ai-loaded-{{ ai_gen_id }}');
                this.contentWrapper.classList.add('ai-scroll-visible-{{ ai_gen_id }}');
              }
              this.hasScrollAnimated = true;
              this.observer.unobserve(this);
            }
          });
        }, options);

        this.observer.observe(this);
      }

      disconnectedCallback() {
        if (this.observer) {
          this.observer.disconnect();
        }
      }
    }

    customElements.define('ai-image-text-{{ ai_gen_id }}', AiImageText{{ ai_gen_id }});
  })();
</script>

